    <declare-styleable name="FilterImageView">
        <attr name="cs_normal_bg_color"/>
        <attr name="cs_fitter_bg_color"/>
        <attr name="cs_border_width"/>
        <attr name="cs_border_color"/>
        <attr name="cs_bg_radius"/>
        <attr name="cs_bg_style"/>
    </declare-styleable>
    <attr name="cs_border_style" format="integer">
        <flag name="left" value="1"/>
        <flag name="top" value="2"/>
        <flag name="right" value="4"/>
        <flag name="bottom" value="8"/>
        <flag name="all" value="16"/>
    </attr>
    <declare-styleable name="FilterTextView">
        <attr name="cs_normal_bg_color"/>
        <attr name="cs_fitter_bg_color"/>
        <attr name="cs_border_width"/>
        <attr name="cs_border_color"/>
        <attr name="cs_bg_radius"/>
        <attr name="csv_pressTextColor"/>
        <attr name="cs_bg_style"/>
        <attr name="cs_border_style"/>
    </declare-styleable>
    <declare-styleable name="NormalTitleBar">
        <attr name="ntb_bg" format="reference"/>
        <attr name="ntb_right_img1" format="reference" />
        <attr name="ntb_right_img2" format="reference" />
        <attr name="ntb_right_img3" format="reference" />
        <attr name="ntb_right_text" format="string" />
        <attr name="ntb_title_text" format="string" />
        <attr name="ntb_right_text_color" format="color" />
        <attr name="ntb_right_text_size" format="float" />
        <attr name="ntb_right_img_size" format="dimension" />
        <attr name="ntb_img_padding" format="dimension" />
        <attr name="ntb_tv_left" format="enum" >
            <enum name="show" value="0" />
            <enum name="showAndFinish" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PlayPauseView">
        <attr name="pp_bg_color" format="color"/>
        <attr name="pp_bg_shadow_size" format="dimension"/>
        <attr name="pp_bg_shadow_color" format="color"/>
        <attr name="pp_bg_shadow_color_alpha" format="integer"/>
        <attr name="pp_btn_color" format="color"/>
        <attr name="pp_gap_width" format="float"/>
        <attr name="pp_space_padding" format="float"/>
        <attr name="pp_anim_duration" format="integer"/>
        <attr name="pp_border_show" format="boolean" />
        <attr name="pp_border_width" format="dimension" />
        <attr name="pp_border_color" format="color" />
        <attr name="pp_anim_direction">
            <enum name="positive" value="1"/>
            <enum name="negative" value="2"/>
        </attr>
    </declare-styleable>
</resources>