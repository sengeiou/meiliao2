<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent60"
    android:clipChildren="false"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/touch_outside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            >


            <ImageView
                android:id="@+id/iv_popuw_buy_video_coupon_pic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_toEndOf="@+id/iv_popuw_buy_video_coupon_pic"
                android:layout_toRightOf="@+id/iv_popuw_buy_video_coupon_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="确认付款"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_video_coupon_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="您有:"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_video_coupon_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/fitness_money"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="13sp"
                    tools:text="200"/>
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <View
                style="@style/hor_match_line"
                />

            <TextView
                android:id="@+id/tv_popuw_buy_video_coupon_title"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在购买八段锦课程"
                android:textColor="#555555"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tv_popuw_buy_album_amount_member"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="149.00元"
                    android:textColor="@color/textColor_f333"
                    android:textSize="28sp"
                    />
                <TextView
                    android:id="@+id/tv_need_amount_member"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222"
                    android:textSize="10sp"
                    android:layout_gravity="bottom"
                    android:drawableLeft="@mipmap/fitness_money"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_need_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="原价  "
                        android:textColor="@color/textColor_666666"/>
                    <TextView
                        android:id="@+id/tv_popuw_buy_video_coupon_need_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥30"
                        android:textColor="@color/textColor_666666"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_popuw_buy_coupon_need_amount"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2222"
                        android:textSize="10sp"
                        android:drawableLeft="@mipmap/fitness_money"
                        />

                </LinearLayout>
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    />
            </FrameLayout>
            <com.ziran.meiliao.common.commonwidget.FilterTextView
                android:id="@+id/iv_popuw_buy_video_coupon_buy"
                android:layout_width="281dp"
                android:layout_height="46dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/normal_bg_green_tran_8"
                android:gravity="center"
                android:text="确认购买"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

