<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="32px"
    android:layout_marginRight="10px"
    android:layout_marginBottom="50px"
    android:layout_height="wrap_content">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_width="509px"
        android:layout_height="238px"
        />
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="509px"
        android:background="@drawable/normal_bg_gray_4d"
        android:layout_height="238px"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="43px"
        android:text="太极拳"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:textColor="@color/white"
        />
<TextView
    android:id="@+id/tv_peoplecount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_title"
    android:layout_marginLeft="30px"
    android:textSize="26px"
    android:text="23"
    android:textColor="@color/white"
    android:layout_marginTop="15px"
    />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:layout_marginTop="52px"
        android:layout_below="@+id/tv_peoplecount"
        android:textColor="@color/white"
        android:textSize="29px"
        android:layout_marginLeft="30px"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30fen"
        android:layout_alignTop="@+id/tv_level"
        android:layout_alignRight="@+id/iv_item_sjk_act_img"
        android:layout_marginRight="19px"
        android:textColor="@color/white"
        android:textSize="29px"

        />
</com.zhy.autolayout.AutoRelativeLayout>