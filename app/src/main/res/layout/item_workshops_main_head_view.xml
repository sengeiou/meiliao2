<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <include layout="@layout/cusom_viewpager"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <Space style="@style/weight_space"/>

        <TextView
            android:id="@+id/tv_workshops_crowd_funding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/workshops_ic_crowdfunding"
            android:drawablePadding="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:text="我要众筹"
            />

        <Space style="@style/weight_space"/>

        <TextView
            android:id="@+id/tv_workshops_team"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/workshops_ic_teambuilding"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="团建定制"
            />

        <Space style="@style/weight_space"/>

    </LinearLayout>

</LinearLayout>