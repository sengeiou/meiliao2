<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_helf">


<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="97px"
    android:layout_marginRight="97px"
    android:background="@drawable/normal_bg_white_update"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="286px"
        android:scaleType="fitXY"
        android:background="@mipmap/update_version_bg"
        />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_below="@+id/iv_top"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="新增功能"
        android:layout_marginTop="50px"
        android:textSize="32px"
        android:layout_marginBottom="22px"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv_update_version_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222222222222222222222222222222222222"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textSize="29px"
        />

    <TextView
        android:id="@+id/tv_update_version_update"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="53px"
        android:layout_marginBottom="66px"
        android:layout_marginRight="60px"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="立即更新"
        android:gravity="center"
        android:background="@drawable/background_gradient"
        />


</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:id="@+id/iv_update_version_close"
        android:layout_width="70px"
        android:layout_marginTop="33px"
        android:layout_height="70px"
        android:layout_below="@+id/rl_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pop_close"/>

</com.zhy.autolayout.AutoRelativeLayout>