<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="541px"
        android:scaleType="fitXY"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="541px"
        android:scaleType="fitXY"
        android:background="@drawable/normal_bg_gray_4d"
        />
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:layout_width="match_parent"
        android:id="@+id/ntb_title"
        app:ntb_tv_left="showAndFinish"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="56px"
        android:layout_marginTop="258px"
        android:layout_marginLeft="51px"
        android:id="@+id/tv_count"
        android:text="第1次"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51px"
        android:layout_marginTop="15px"
        android:textStyle="bold"
        android:text="八段锦练习完成"
        android:textSize="56px"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_count"
        />

    <TextView
        android:id="@+id/tv_duration"
        android:textColor="@color/white"
        android:layout_marginTop="28px"
        android:layout_below="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:textSize="24px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51px"
        android:text="用时：00：30：24"
        />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/arl"
            android:layout_height="206px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="30px"
            android:layout_below="@+id/tv_duration"
            android:background="@drawable/normal_bg_white"
            >

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="106px"
                android:layout_marginLeft="60px"
                android:layout_height="106px"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdf"
                android:textSize="28px"
                android:layout_marginLeft="42px"
                android:layout_toRightOf="@+id/iv_user_avatar"
                android:layout_alignTop="@+id/iv_user_avatar"
                />

            <TextView
                android:id="@+id/tv_time_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42px"
                android:layout_marginTop="39px"
                android:textSize="24px"
                android:layout_toRightOf="@+id/iv_user_avatar"
                android:layout_below="@+id/tv_user_name"
                android:text="2019-08-23 18:12 完成练习"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/arl"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/normal_bg_white"
        android:layout_marginRight="30px"
        android:layout_height="533px">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/ll_top"
    android:paddingTop="51px"
    >


    <View
        android:layout_width="136px"
        android:layout_height="1px"
        android:background="#B8B8B8"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="练习完了，正念冥想一下吧"
        android:textSize="28px"
        />
    <View
        android:layout_width="136px"
        android:layout_height="1px"
        android:background="#B8B8B8"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>

<com.zhy.autolayout.AutoRelativeLayout
    android:layout_below="@+id/ll_top"
    android:id="@+id/arl_one"
    android:layout_width="match_parent"
    android:layout_marginTop="37px"
    android:layout_marginLeft="28px"
    android:background="@drawable/normal_bg_white"
    android:layout_marginRight="28px"
    android:layout_height="wrap_content"
    android:padding="11px"

    >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="138px"
        android:layout_height="120px"
        />
    <TextView
        android:id="@+id/tv_title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11px"
        android:text="静观止语"
        android:layout_marginLeft="44px"
        android:layout_toRightOf="@+id/iv_icon"
        android:textSize="28px"
        android:textColor="@color/textColor_f333"

        />
<TextView
    android:id="@+id/tv_time"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/iv_icon"
    android:layout_marginLeft="44px"
    android:textSize="24px"
    android:textColor="@color/textColor_666666"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:layout_below="@+id/tv_title_one"
    android:text="33"
    />
    <TextView
        android:id="@+id/tv_play"
        android:layout_width="47px"
        android:layout_height="51px"
        android:layout_centerVertical="true"
        android:layout_marginRight="61px"
        android:layout_alignParentRight="true"
        android:background="@mipmap/fitness_with_play"
        />
</com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_two"
            android:layout_below="@+id/arl_one"
            android:layout_width="match_parent"
            android:layout_marginTop="57px"
            android:layout_marginLeft="28px"
            android:background="@drawable/normal_bg_white"
            android:layout_marginRight="28px"
            android:layout_height="wrap_content"
            android:padding="11px"

            >

            <ImageView
                android:id="@+id/iv_icon_two"
                android:layout_width="138px"
                android:layout_height="120px"
                />
            <TextView
                android:id="@+id/tv_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11px"
                android:text="静观止语"
                android:layout_marginLeft="44px"
                android:layout_toRightOf="@+id/iv_icon_two"
                android:textSize="28px"
                android:textColor="@color/textColor_f333"

                />
            <TextView
                android:id="@+id/tv_time_two"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/iv_icon_two"
                android:layout_marginLeft="44px"
                android:textSize="24px"
                android:textColor="@color/textColor_666666"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_below="@+id/tv_title_two"
                android:text="33"
                />
            <TextView
                android:id="@+id/tv_play_two"
                android:layout_width="47px"
                android:layout_height="51px"
                android:layout_centerVertical="true"
                android:layout_marginRight="61px"
                android:layout_alignParentRight="true"
                android:background="@mipmap/fitness_with_play"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>