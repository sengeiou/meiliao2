<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >


        <com.ziran.meiliao.widget.BaseItemView
            android:id="@+id/bivCourse"
            style="@style/BaseItemView"
            app:biv_click_id="@integer/id_course"
            app:biv_content_must_need="true"
            app:biv_title="课题"
            />

        <com.ziran.meiliao.widget.BaseItemView
            android:id="@+id/bivTeacher"
            style="@style/BaseItemView"
            app:biv_click_id="@integer/id_teacher"
            app:biv_content_must_need="true"
            app:biv_title="老师"
            />
        <!--

                <com.ziran.meiliao.widget.BaseItemView
                    android:id="@+id/bivType"
                    style="@style/BaseItemView"
                    app:biv_click_id="@integer/id_type"
                    app:biv_content_must_need="true"
                    app:biv_title="课程形式"
                    />
        -->

        <com.ziran.meiliao.widget.BaseItemView
            android:id="@+id/bivTime"
            style="@style/BaseItemView"
            android:visibility="gone"
            app:biv_click_id="@integer/id_time"
            app:biv_content_must_need="true"
            app:biv_title="时间"
            />

        <com.ziran.meiliao.widget.BaseItemView
            android:id="@+id/bivAddress"
            style="@style/BaseItemView"
            app:biv_click_id="@integer/id_address"
            app:biv_content_must_need="true"
            app:biv_title="地点"
            />

        <com.ziran.meiliao.widget.BaseItemView
            android:id="@+id/bivOfficialPrice"
            style="@style/BaseItemView"
            app:biv_forword_show="false"
            app:biv_right_color="@color/textColor_teshe"
            app:biv_right_text="费用说明"
            app:biv_title="课程费用"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按最低开课人数预收¥1000/人，超出众筹目标金额平均返回，众筹不成功即退款。"
            />


        <com.ziran.meiliao.ui.workshops.widget.PriceSelectView
            android:id="@+id/pricedSelectView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:psv_line_color="@color/divider1"
            app:psv_line_width="0.7dp"
            />


