<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >



    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="289px"
        android:layout_height="289px"
        android:layout_marginTop="207px"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="94px"
        android:layout_marginBottom="40px"
        android:layout_centerHorizontal="true"
        android:text="2132***123"
        android:textSize="36px"
        android:textColor="@color/textColor_4c"

        />
    <TextView
        android:id="@+id/tv_onekey_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_height="80px"
        android:text="@string/login_text_once"
        android:paddingLeft="92px"
        android:paddingRight="92px"
        android:layout_gravity="center"
        android:textSize="30px"
        android:layout_marginBottom="60px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_red"
        />


    <TextView
        android:id="@+id/tv_other_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="105px"
        android:layout_marginRight="105px"
        android:layout_height="80px"
        android:text="@string/login_text_other"
        android:layout_gravity="center"
        android:textSize="30px"
        android:layout_marginBottom="15px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/textColor_4c"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_e0"
        />

<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <View
        android:layout_width="33px"
        android:layout_height="1px"
        android:background="@color/textColor_8F8F8F"
        android:layout_alignLeft="@+id/tv_sjdl"
        android:layout_toRightOf="@+id/tv_sjdl"
        android:layout_alignRight="@+id/tv_86"
        android:layout_marginTop="28px"
        android:layout_below="@+id/tv_86"
        >
    </View>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2312"
    android:textSize="24px"
    android:textColor="@color/textColor_999"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/textColor_8F8F8F"
        android:layout_alignLeft="@+id/tv_sjdl"
        android:layout_toRightOf="@+id/tv_sjdl"
        android:layout_alignRight="@+id/tv_86"
        android:layout_marginTop="28px"
        android:layout_below="@+id/tv_86"
        >
    </View>
</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>