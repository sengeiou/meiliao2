<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            >

            <ImageView
                android:id="@+id/iv_viewpager_me_img"
                android:layout_width="96dp"
                android:src="@mipmap/ic_loading_square_big"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_height="72dp" />

            <TextView
                android:id="@+id/tv_viewpager_me_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_viewpager_me_img"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/textColor_333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_viewpager_me_antor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_viewpager_me_pro"
                android:layout_toRightOf="@+id/iv_viewpager_me_img"
                android:textColor="@color/textColor_9f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_viewpager_me_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_viewpager_me_img"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/iv_viewpager_me_img"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColor_9f"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>