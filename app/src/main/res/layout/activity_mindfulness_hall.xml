<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:id="@+id/arlMain"
                android:background="@color/white"
    >



    <com.ziran.meiliao.common.commonwidget.ViewPagerFixed
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl_mindfulness_hall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mindfulness_hall_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/arrow_back_blackbg"/>

        <com.ziran.meiliao.widget.menu.AnnularMenu
            android:id="@+id/annularMenu"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:orientation="vertical"
            app:position="right_top"
            app:radius="54dp"
            app:toggleDuration="600"
            >

            <com.ziran.meiliao.widget.menu.ShadowImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:src="@mipmap/mdflnes_more"
                />

            <com.ziran.meiliao.widget.menu.ShadowImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@mipmap/mdflnes_ic_record"
                />

            <com.ziran.meiliao.widget.menu.ShadowImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:src="@mipmap/mdflnes_ic_music"
                />
        </com.ziran.meiliao.widget.menu.AnnularMenu>
    </FrameLayout>


</com.zhy.autolayout.AutoRelativeLayout>