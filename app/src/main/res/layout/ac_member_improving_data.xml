<?xml version="1.0" encoding="utf-8"?>





<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F9FA"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="448px"
        android:background="@mipmap/improving_data_bg"

        />
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        app:ntb_tv_left="showAndFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_top"
        android:layout_below="@+id/ntb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完善个人资料"
        android:layout_marginLeft="59px"
        android:layout_marginTop="90px"
        android:textSize="40px"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMATION"
        android:layout_marginLeft="60px"
        android:layout_marginTop="5px"
        android:textSize="36px"
        android:layout_below="@+id/tv_top"
        android:textColor="#FED0A6"

        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        android:layout_below="@+id/tv_money"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:background="@drawable/normal_bg_white60"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="104px"
            android:id="@+id/arl_one"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="142px"
                android:textColor="@color/textColor_f333"
                android:text="昵称:"

                android:textSize="30px"
                />

            <EditText
                android:id="@+id/et_NcName"
                android:layout_marginLeft="200px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textColor="@color/textColor_999"
                android:textSize="30px"
                android:hint="@string/input_name"
                android:textColorHint="@color/gray2"
                android:text=""
                android:maxLength="10"
                android:background="@null"
                android:layout_alignTop="@+id/tv_nickname"
                android:layout_toRightOf="@+id/tv_nickname"
                />
            <View
                android:layout_below="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_two"
            android:layout_width="wrap_content"
            android:layout_below="@+id/arl_one"
            android:layout_marginTop="34px"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="141px"
                android:textColor="@color/textColor_f333"
                android:text="姓名:"
                android:textSize="30px"
                />

            <EditText
                android:id="@+id/edit_name"
                android:layout_marginLeft="200px"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/textColor_999"
                android:text=""
                android:textColorHint="@color/gray2"
                android:hint="@string/input_username"
                android:textSize="30px"
                android:maxLength="10"
                android:layout_alignTop="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_name"
                />
            <View
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_three"
            android:layout_width="wrap_content"
            android:layout_below="@+id/arl_two"
            android:layout_marginTop="34px"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:textColor="@color/textColor_f333"
                android:text="出生日期:"
                android:textSize="30px"
                />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_date"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200px"
                android:layout_marginTop="3dp"
                android:textColorHint="@color/gray2"

                android:layout_toRightOf="@+id/tv_date"
                android:textColor="@color/textColor_999"
                android:textSize="30px" />

            <View
                android:layout_below="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/arl_three"
            android:id="@+id/arl_sex"
            android:layout_marginTop="34px"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="142px"
                android:textColor="@color/textColor_f333"
                android:text="性别:"
                android:textSize="30px"
                />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_marginLeft="200px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="30px"
                android:textColor="@color/textColor_999"
                android:text="男"
                android:layout_alignTop="@+id/tv_xb"
                android:layout_toRightOf="@+id/tv_xb"
                />
            <View
                android:layout_below="@+id/tv_sex"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/arl_sex"
            android:id="@+id/arl_four"
            android:layout_marginTop="34px"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="142px"
                android:layout_centerVertical="true"
                android:text="职业:"
                android:textColor="@color/textColor_f333"
                android:textSize="30px" />

            <EditText
                android:id="@+id/tv_profession_right"
                android:layout_marginLeft="200px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLength="10"
                android:textSize="30px"
                android:textColorHint="@color/gray2"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/textColor_999"
                android:text=""
                android:hint="请输入职业"
                android:layout_alignTop="@+id/tv_profession"
                android:layout_toRightOf="@+id/tv_profession"
                />
            <View
                android:layout_below="@+id/tv_profession"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/arl_four"
            android:id="@+id/arl_five"
            android:layout_marginTop="34px"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="82px"
                android:textColor="@color/textColor_f333"
                android:text="常住城市:"
                android:textSize="30px"
                />

            <EditText
                android:id="@+id/tv_permanentCity"
                android:layout_marginLeft="200px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/textColor_999"
                android:textSize="30px"
                android:text=""
                android:textColorHint="@color/gray2"
                android:hint="请输入城市"
                android:maxLength="10"
                android:singleLine="true"
                android:background="@null"
                android:layout_alignTop="@+id/tv_city"
                android:layout_toRightOf="@+id/tv_city"
                />
            <View
                android:layout_below="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_marginTop="29px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:background="#F0F0F0"
                android:layout_height="1px"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="180px"
            android:layout_height="88px"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/arl_five"
            android:layout_marginTop="48px"
            android:textSize="32px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:text="@string/finish"
            android:background="@drawable/normal_bg_green"
            />

    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="148px"
        android:layout_height="148px"
        android:layout_below="@+id/tv_money"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/member_user_icon"
        />
</com.zhy.autolayout.AutoRelativeLayout>
