<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/subtitlebg_bitmap"
                android:orientation="vertical"
    >


    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_take_notes_finish"
        android:scrollbars="none"
        android:layout_below="@+id/ntb"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_take_notes_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ntb"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor_666"
                android:textSize="12sp"
                tools:text="2017年7月31日 9:00"
                />

            <TextView
                android:id="@+id/tv_take_notes_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="如实记录自己的体验,或描述心智中出现的任何景象"
                android:textColor="@color/textColor_999"
                android:textSize="14sp"
                />
            <LinearLayout
                android:id="@+id/ll_take_notes_ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            </LinearLayout>

            <com.ziran.meiliao.widget.ninegridimageview.NineGridImageView
                android:id="@+id/ngl_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imgGap="3dp"
                app:showStyle="grid"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="400dp"
                />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_take_notes_pick_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:src="@mipmap/mdflnes__pic"
        />

    <TextView
        android:id="@+id/tv_take_notes_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:text="完成"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"
        />
</RelativeLayout>