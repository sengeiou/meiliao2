<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent30"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_getcoupon_screenshot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:layout_weight="73"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_screeshot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_getcoupon_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/ll_getcoupon_imgs"
                android:layout_marginBottom="@dimen/edge_margin"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/tv_getcoupon_wpyx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="5P医学"
                android:textColor="@color/textColor_333"/>

            <ImageView
                android:id="@+id/tv_getcoupon_ewm"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_above="@+id/tv_getcoupon_wpyx"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:id="@+id/ll_getcoupon_imgs"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/tv_getcoupon_ewm"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_getcoupon_1"
                    style="@style/GainCouponImageView"
                    />

                <ImageView
                    android:id="@+id/iv_getcoupon_2"
                    style="@style/GainCouponImageView"
                    />

                <ImageView
                    android:id="@+id/iv_getcoupon_3"
                    style="@style/GainCouponImageView"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_getcoupon_imgs"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edge_margin"
                    android:gravity="center"
                    android:text="领取优惠劵"
                    android:textColor="@color/textColor_333"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_getcoupon_userhead"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_user_pic"/>
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_getcoupon_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor_333"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="扫码帮我获取"
                        android:textColor="@color/textColor_333"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_getcoupon_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠劵"
                        android:textColor="@color/textColor_333"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_getcoupon_exist_hb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="27">

        <RelativeLayout
            android:id="@+id/rl_getcoupon_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_getcoupon_prompt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/verLine"
                android:gravity="center"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:textColor="@color/textColor_333"
                />

            <View
                android:id="@+id/verLine"
                style="@style/hor_match_line"
                android:layout_above="@+id/iv_getcoupon_ok"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/iv_getcoupon_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_common_height"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/textColor_333"
                android:textSize="16sp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_getcoupon_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/edge_margin"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    style="@style/hor_match_line"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_getcoupon_share_text"
                    android:layout_toStartOf="@+id/tv_getcoupon_share_text"/>

                <TextView
                    android:id="@+id/tv_getcoupon_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/edge_margin"
                    android:paddingRight="@dimen/edge_margin"
                    android:text="@string/action_share"/>

                <View
                    style="@style/hor_match_line"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_getcoupon_share_text"/>
            </RelativeLayout>

            <com.ziran.meiliao.widget.MoreImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/moreImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_weight="3"
                app:moreImageView_default_data="share_white"/>

            <ImageView
                android:id="@+id/iv_getcoupon_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@mipmap/ic_close"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>