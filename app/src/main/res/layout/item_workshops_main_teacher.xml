<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="12dp"
    >

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_course_library_teacher_pic"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:roundimageview_height_ratio="1.2"

        />

    <TextView
        android:id="@+id/tv_item_course_library_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_course_library_teacher_pic"
        android:layout_toRightOf="@+id/iv_item_course_library_teacher_pic"
        android:text="胡君梅"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_item_course_library_teacher_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/tv_item_course_library_teacher_name"
        android:layout_toRightOf="@+id/iv_item_course_library_teacher_pic"
        android:text="华人正念减压中心创始人\nCFM认证MBSR师资"
        android:textColor="@color/textColor_666"
        />

    <TextView
        android:id="@+id/tv_item_course_library_teacher_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_course_library_teacher_pic"
        android:layout_toRightOf="@+id/iv_item_course_library_teacher_pic"
        android:drawableLeft="@mipmap/ic_related"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="共3个课程"
        android:textColor="@color/textColor_999"
        />

</RelativeLayout>