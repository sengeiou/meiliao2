<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout android:layout_height="match_parent"

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        app:ntb_tv_left="showAndFinish"
        android:layout_height="wrap_content"/>
<com.zhy.autolayout.AutoRelativeLayout
    android:background="@color/white"
    android:id="@+id/arl_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_margin="20px"
        android:layout_width="160px"
        android:layout_height="200px"
        >
    </ImageView>
    <TextView
        android:id="@+id/iv_item_sjk_act_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门"
        android:paddingLeft="5px"
        android:paddingBottom="2px"
        android:paddingTop="2px"
        android:paddingRight="5px"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textSize="12px"
        android:textColor="@color/white"
        android:background="@color/red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:paddingRight="10px"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:layout_alignTop="@+id/iv_item_sjk_act_img"
        android:text="慈悲疗愈力元旦"
        android:layout_marginRight="10px"
        android:textSize="32px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor_444"
        android:id="@+id/tv_title_order"
        />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17px"
        android:textSize="24px"
        android:lines="2" android:ellipsize="end"
        android:text="导师:胡君梅111111111111111111111111111111111111111111111"
        android:textColor="@color/textColor_666666"
        android:layout_alignLeft="@+id/tv_title_order"
        android:layout_below="@+id/tv_title_order"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:textColor="@color/textColor_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:maxEms="13"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="8px"
        android:text="深圳22222222222111111111111111111111111111111111111111111222"
        android:layout_alignLeft="@+id/tv_teacher_name"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/all_num"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_bg_read_7460"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:layout_alignLeft="@+id/tv_teacher_name"
        >

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="45px"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:id="@+id/autoLinearLayout2"

        >
        <TextView
            android:id="@+id/tv_person"
            android:textColor="#F0AE5C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8888"
            android:textSize="24px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sssdf"
        android:id="@+id/tv_left_price"
        android:textSize="24px"
        android:textColor="@color/textColor_999"
        android:layout_marginLeft="30px"
        android:layout_below="@+id/iv_item_sjk_act_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sssdf"
        android:id="@+id/tv_price"
        android:layout_alignParentRight="true"
        android:textSize="24px"
        android:layout_marginRight="44px"
        android:textColor="#F0AE5C"
        android:layout_below="@+id/iv_item_sjk_act_img"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="43px"
        android:background="#D6D6D6"
        />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/all_real"
    android:layout_marginTop="24px"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/view2"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实付金额："
        android:textSize="24px"
        android:textColor="@color/textColor_333"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sssdf"
        android:id="@+id/tv_realpay"
        android:layout_alignParentRight="true"
        android:textSize="30px"
        android:layout_marginRight="44px"
        android:textColor="#F0AE5C"
        android:layout_marginBottom="24px"
        android:layout_below="@+id/iv_item_sjk_act_img"
        />
</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="17px"
        android:layout_below="@+id/all_real"
        android:background="#FAFAFA"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="33px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textColor="@color/textColor_999"
            android:layout_marginLeft="28px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfdsf"
            android:id="@+id/tv_order_num"
            android:textColor="@color/textColor_333"
            android:layout_marginLeft="10px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="33px"
        android:background="@color/white"
        android:paddingTop="33px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式:"
            android:textColor="@color/textColor_999"
            android:layout_marginLeft="28px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfdsf"
            android:id="@+id/tv_pay_way"
            android:textColor="@color/textColor_333"
            android:layout_marginLeft="10px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:background="#D6D6D6"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="33px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:text="创建时间:"
            android:textColor="@color/textColor_999" />

        <TextView
            android:id="@+id/tv_found_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfdsf"

            android:textColor="@color/textColor_333"
            android:layout_marginLeft="10px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="33px"
        android:paddingBottom="33px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间:"
            android:textColor="@color/textColor_999"
            android:layout_marginLeft="28px"
            />

        <TextView
            android:id="@+id/tv_over_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfdsf"
            android:textColor="@color/textColor_333"
            android:layout_marginLeft="10px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>