<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="110px"
    android:layout_marginLeft="30px"
    android:layout_height="wrap_content">

<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态"
        android:textSize="40px"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/tv_dt"
        android:background="@drawable/normal_bg_gray_f7"
        android:drawableLeft="@mipmap/icon_take_photo"
        android:drawablePadding="10px"
        android:paddingLeft="30px"
        android:paddingTop="16px"
        android:layout_marginLeft="35px"
        android:paddingRight="30px"
        android:paddingBottom="16px"
        android:text="分享生活动态"
        android:textColor="@color/black"
        android:textSize="26px" />
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="29px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_arrow_gray"
        />
</com.zhy.autolayout.AutoRelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginTop="41px"
        android:visibility="gone"
        android:src="@mipmap/icon_select_photo"
        />
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="TA还没有发动态照片哦"
        android:layout_marginTop="68px"
        android:textColor="@color/textColor_b2"
        android:layout_marginBottom="100px"
        android:textSize="30px"
        />

</com.zhy.autolayout.AutoLinearLayout>