<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ntb_title_text="举报"
        app:ntb_tv_left="showAndFinish" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ntb"
        android:orientation="vertical">

        <View style="@style/hor_match_line_8dp" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="发布色情/违法等不良信息"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />

        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="欺诈骗钱"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="广告骚扰"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="其他"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv5"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="其他"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv6"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="其他"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:itemView_rightText_color="@color/red"
            app:showRightArrow="true" />
    </LinearLayout>










</RelativeLayout>