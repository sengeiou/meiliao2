<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100px"

    xmlns:android="http://schemas.android.com/apk/res/android"
    >


<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="45px"
    android:layout_marginRight="45px"
    android:layout_marginTop="27px"
    android:background="@drawable/normal_bg_white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_centerHorizontal="true"
        android:text="@string/Choose_mentor"
        android:layout_marginTop="40px"

        android:textColor="@color/login_text_color"
        />

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E0E0E0"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="38px"
        />
    <com.ziran.meiliao.common.irecyclerview.IRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line_one"
        />

<TextView
    android:id="@+id/tv_qd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/recyclerView"
    android:layout_marginLeft="98px"
    android:layout_marginRight="98px"
    android:paddingTop="20px"
    android:paddingBottom="20px"
    android:textSize="32px"
    android:textColor="@color/white"
    android:gravity="center"
    android:layout_marginTop="42px"
    android:layout_marginBottom="42px"
    android:text="@string/determine"
    android:background="@drawable/normal_bg_orange"

    />

</com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/tv_close"
        android:layout_marginRight="12px"
        android:drawableLeft="@mipmap/jdx_choose_close"
        />
</com.zhy.autolayout.AutoFrameLayout>