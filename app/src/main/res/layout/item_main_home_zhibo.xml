<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_marginTop="6dp"
              android:paddingBottom="12dp"
              android:paddingRight="12dp"
              android:paddingLeft="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_main_home_zhibo_title"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="初探瑜伽与禅之间的关联"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_item_main_home_zhibo_cown_time"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableLeft="@mipmap/course_icon_sandglass2"
        android:drawablePadding="4dp"
        tools:text="9天9小时9分9秒 "
        android:textColor="@color/textColor_teshe2"/>
</LinearLayout>