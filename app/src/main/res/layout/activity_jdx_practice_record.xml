<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_first"
        android:layout_width="match_parent"
        android:background="@mipmap/jdx_student_bg"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<com.ziran.meiliao.common.commonwidget.NormalTitleBar
    android:layout_width="match_parent"
    android:id="@+id/ntb_title"
    android:layout_height="wrap_content"

    android:layout_marginTop="20px"
    >
</com.ziran.meiliao.common.commonwidget.NormalTitleBar>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="148px"
        android:layout_height="148px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70px"
        android:src="@mipmap/ic_ewm" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginTop="29px"
        android:text="小明同学"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_user_avatar"
        android:id="@+id/tv_user_name" />

<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="105px"
    android:layout_marginTop="43px"
    android:layout_below="@+id/tv_user_name"
    >
    <TextView
        android:id="@+id/tv_progress_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="24px"
        android:textColor="@color/white"
        android:layout_marginLeft="100px"
        />

    <ProgressBar
        android:max="100"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/progressbar"
        android:id="@+id/progressBarHorizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="12px"
        android:layout_width="match_parent"
    android:layout_toRightOf="@+id/tv_progress_first"
        android:layout_marginRight="134px"
        android:layout_height="10px"/>
    <TextView
        android:id="@+id/tv_progress_second"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="63px"
        android:textSize="24px"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="23px"
        android:layout_height="wrap_content"
        android:text="100%"

        />
</com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:id="@+id/line_first"
        android:layout_below="@+id/all_first"
        android:layout_width="match_parent"
        android:layout_height="19px"
        android:background="#F5F9FA"
        />



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            />
        <View
            android:id="@+id/line_second"
            android:layout_below="@+id/all_first"
            android:layout_width="match_parent"
            android:layout_height="19px"
            android:background="#F5F9FA"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>