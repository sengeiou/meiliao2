<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rl_bg">






<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg"
    android:focusable="false"
    android:clickable="false"

    />



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_likeanim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="initial.json"
        android:scaleType="fitXY"
        app:lottie_loop="false"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        android:focusable="false"
        android:clickable="false"
        />








    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"

        >

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_skip"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/textColor_teshe"
            android:textSize="12sp"
            />

        <com.ziran.meiliao.ui.settings.widget.DonutProgress
            android:id="@+id/donutProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:donut_unfinished_color="@color/transparent"
            app:donut_max="100"
            app:donut_show_text="false"
            />
    </FrameLayout>
    <com.ziran.meiliao.common.commonwidget.LoadingTip
        android:id="@+id/loadedTip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</com.zhy.autolayout.AutoFrameLayout>