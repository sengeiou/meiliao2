<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/selector_tran_gray">

    <ImageView
        android:id="@+id/iv_item_sjk_live_comment_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_member_pic"/>


    <TextView
        android:id="@+id/tv_item_sjk_live_comment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_sjk_live_comment_avatar"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_item_sjk_live_comment_time"
        android:layout_toRightOf="@+id/iv_item_sjk_live_comment_avatar"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@color/textColor_333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_live_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_sjk_live_comment_avatar"
        android:layout_marginRight="12sp"
        android:layout_toRightOf="@+id/iv_item_sjk_live_comment_avatar"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_live_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_item_sjk_live_comment_avatar"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:textSize="12sp"/>

    <View
        android:id="@+id/view_item_sjk_live_comment_line"
        style="@style/hor_match_line"
        android:layout_alignLeft="@+id/tv_item_sjk_live_comment_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>