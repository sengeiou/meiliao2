<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_course_library_crowd_funding_buy_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="12dp"
    >

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_course_library_buy_pic"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@mipmap/ic_loading_square"
        app:roundimageview_height_ratio="0.611"
        />

    <TextView
        android:id="@+id/tv_course_library_buy_title"
        tools:text="10天深度睡眠"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_course_library_buy_pic"
        android:layout_toRightOf="@+id/iv_course_library_buy_pic"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_course_library_buy_address_and_date"
        tools:text="北京\n2017-12-02至2017-12-08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_course_library_buy_pic"
        android:layout_toRightOf="@+id/iv_course_library_buy_pic"
        android:textColor="@color/textColor_999"
        android:textSize="12sp"
        />
</RelativeLayout>

