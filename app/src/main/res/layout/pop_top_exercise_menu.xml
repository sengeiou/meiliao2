<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_top_menu"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:layout_marginTop="143px"

    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_first"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/relativelayout_first_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<TextView
    android:id="@+id/tv_time_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/umeng_socialize_text_time"
    android:text="@string/time_interval_hint"
    android:layout_marginLeft="51px"
    android:layout_marginTop="39px"
    android:layout_marginBottom="38px"
    android:textSize="24px"
    />
    <TextView
        android:id="@+id/tv_hint_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:layout_centerVertical="true"
        android:textColor="#444444"
        android:layout_toLeftOf="@+id/tv_into"
        android:layout_alignTop="@+id/tv_time_hint"
        />
    <TextView
        android:id="@+id/tv_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18px"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/jdx_menu_into"
            android:layout_marginRight="50px"
        />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_jg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_below="@+id/relativelayout_first_view"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                >
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/tv_jg"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65px"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:layout_below="@+id/recyclerView_first"
                android:textColor="#5FA9F8"
                android:layout_marginBottom="30px"
                android:layout_marginRight="49px"
                android:textSize="24px"
                android:text="@string/determine"
                />

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arl_first"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relativelayout_second"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_every_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/umeng_socialize_text_time"
            android:text="@string/every_day_time"
            android:layout_marginLeft="51px"
            android:layout_marginTop="39px"
            android:layout_marginBottom="38px"
            android:textSize="24px"
            />

            <TextView
                android:id="@+id/tv_exe_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_into_every"
                android:textColor="#444444"
                android:textSize="24px" />

            <TextView
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="5px"
                android:paddingBottom="5px"
                android:id="@+id/tv_into_every"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="50px"
                android:layout_marginLeft="28px"
                android:drawableRight="@mipmap/jdx_menu_into"
                />

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relativelayout_second_view"
            android:visibility="gone"
            android:layout_below="@+id/relativelayout_second"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_second"
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content"
                >
            </android.support.v7.widget.RecyclerView>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_below="@+id/recyclerView_second"
                android:gravity="center_vertical"
                  android:layout_marginBottom="39px"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_hint_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22px"
                    android:layout_marginLeft="51px"
                    android:layout_centerVertical="true"
                    android:text="@string/hint_close"
                    android:textColor="@color/umeng_socialize_text_time"
                    />
                <com.ziran.meiliao.widget.SwitchButton
                    android:id="@+id/sb_set_time_switch"
                    xmlns:toggle="http://schemas.android.com/apk/res-auto"
                    android:layout_width="86px"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_hint_close"
                    android:layout_marginLeft="15px"
                    toggle:sb_background="@color/gray"
                    toggle:sb_show_indicator="false"/>
        <TextView
            android:id="@+id/tv_qd"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:textColor="#5FA9F8"
            android:layout_marginRight="49px"
            android:padding="10px"
            android:textSize="24px"
            android:text="@string/determine"
            />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="#E0E0E0"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/arl_second"
        android:background="#E0E0E0"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arl_second"
        >

        <TextView
            android:id="@+id/tv_exe_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/umeng_socialize_text_time"
            android:text="@string/exercise_record"
            android:layout_marginLeft="51px"
            android:layout_marginTop="39px"
            android:layout_marginBottom="38px"
            android:textSize="24px"
            />
        <TextView
            android:id="@+id/tv_into_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18px"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/jdx_menu_into"
            android:layout_marginRight="50px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>