<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_tran_gray"
                android:paddingTop="8dp"
    >

    <include
        android:id="@+id/include_smooth_checkbox"
        layout="@layout/include_smooth_checkbox"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/item_content_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >

            <com.ziran.meiliao.common.commonwidget.RoundImageView
                android:id="@+id/iv_me_collect_zl_img"
                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:src="@mipmap/ic_loading_square_small"
                app:roundimageview_height_ratio="1.18"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_me_collect_zl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/frameLayout"
            android:maxLines="1"
            android:text="胡君梅 — 以自我觉察唤醒孩子的学习力"
            android:textColor="@color/textColor_333"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tv_me_collect_zl_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_me_collect_album_profile"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/frameLayout"
            android:maxLines="1"
            android:textColor="@color/textColor_666"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_me_collect_zl_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tv_me_collect_album_price"
            android:layout_toRightOf="@+id/frameLayout"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="第一课：拥有专注、清明的心智，生活和工作才有效率和创意"
            android:textColor="@color/textColor_666"
            android:textSize="12sp"
            />


    </RelativeLayout>

    <View
        style="@style/hor_match_line"
        android:layout_below="@+id/item_content_rl"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        />
</RelativeLayout>