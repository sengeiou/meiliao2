<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="16dp"
              android:paddingRight="12dp"
              android:paddingLeft="12dp"
    >

    <ImageView
        android:id="@+id/iv_right_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/delete_red"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@mipmap/workshops_content_line1"
        />

    <EditText
        style="@style/TextViewContent"
        android:id="@+id/et_item_crowd_funding_used_template_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="6dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="12dp"
        android:maxLines="4"
        android:text="学会爱自己，是一生浪漫的开端。当越来越多人，被焦出一套套相关种身心困境。"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@mipmap/workshops_content_line2"
        />
</LinearLayout>