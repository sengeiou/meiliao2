<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:paddingTop="12dp"
    android:background="@drawable/selector_tran_gray">

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_sjk_tralier_img"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        app:roundimageview_height_ratio="0.765"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_loading_square"/>

    <TextView
        android:id="@+id/tv_sjk_tralier_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_sjk_tralier_img"
        android:layout_toRightOf="@+id/iv_sjk_tralier_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColor_666"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_sjk_tralier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sjk_tralier_intro"
        android:layout_toRightOf="@+id/iv_sjk_tralier_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_sjk_tralier_name"
        android:layout_width="wrap_content"
        android:textColor="@color/textColor_999"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_sjk_tralier_img"
        android:layout_toRightOf="@+id/iv_sjk_tralier_img"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_sjk_tralier_descript"
        android:layout_width="wrap_content"
        android:textColor="@color/textColor_999"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_sjk_tralier_img"
        android:layout_toLeftOf="@+id/tv_sjk_tralier_lable"
        android:layout_toRightOf="@+id/tv_sjk_tralier_name"
        android:ellipsize="end"
        android:layout_marginLeft="4dp"
        android:maxLines="1"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_sjk_tralier_lable"
        style="@style/TextViewLabelStyleRight"
        android:layout_alignBottom="@+id/iv_sjk_tralier_img"
        android:visibility="gone"
        android:gravity="center"
        />

    <View
        style="@style/hor_match_line"
        android:layout_below="@+id/iv_sjk_tralier_img"
        android:layout_marginTop="12dp"
        />
</RelativeLayout>
