<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="@drawable/selector_tran_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_item_sjk_history_course_name"
            android:background="@color/white_alpha_half">

            <ImageView
                android:id="@+id/iv_item_sjk_history_course_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_loading_square_big"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_item_sjk_history_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_item_sjk_history_course_listerCount"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_item_sjk_history_course_listerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@mipmap/ic_sjk_list_eye_gray"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:textColor="@color/textColor_9f"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_item_sjk_history_course_lable"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_tv_jyg_vip_bg"
            android:gravity="center"
            android:textColor="@color/textColor_teshe"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
