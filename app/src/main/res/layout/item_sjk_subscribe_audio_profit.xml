<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:roundimageview_type="circle"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_member_pic"/>

    <TextView
        android:id="@+id/tv_item_sjk_subscribe_comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:layout_toRightOf="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:text="小林"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_subscribe_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:layout_toRightOf="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:text="小林"
        android:textColor="@color/textColor_999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_subscribe_comment_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:layout_marginRight="12dp"
        android:drawableLeft="@mipmap/course_btn_like"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="999"
        android:textColor="@color/textColor_999"
        android:textSize="12sp"/>
<!--
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/course_btn_comment"
        android:layout_height="wrap_content"
        />-->
    <TextView
        android:id="@+id/tv_item_sjk_subscribe_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/iv_item_sjk_subscribe_comment_avatar"
        android:drawablePadding="4dp"
        android:textColor="@color/textColor_333"
        tools:text="就是这样做咯就是这样做咯就是这样做咯就是这样做咯就是这样做咯就是这样做咯就是这样做咯就是这样做咯就是这样做咯"
        />

    <View
        style="@style/hor_match_line"
        android:layout_below="@+id/tv_item_sjk_subscribe_comment_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_item_sjk_subscribe_comment_avatar"/>
</RelativeLayout>