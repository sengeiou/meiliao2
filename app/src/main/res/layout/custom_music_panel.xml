<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="54dp"
              android:background="#F7F7F5"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_music_panel_play"
        android:layout_width="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/iv_music_panel_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.ziran.meiliao.common.commonwidget.PlayPauseView
            android:id="@+id/iv_music_panel_play_state"
            android:layout_width="28dp"
            android:layout_gravity="center"
            android:layout_height="28dp"
            app:pp_gap_width="8"
            app:pp_bg_color="@color/textColor_teshe"
            app:pp_bg_shadow_size="1dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_music_panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="童慧琦-穿越抑郁的正念之道"
            android:textColor="@color/textColor_333"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_music_panel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="00:00:00／00:00:00"
            android:textColor="@color/textColor_999"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_music_panel_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="6dp"
        android:src="@mipmap/ic_main_jyc_close"/>
    <com.ziran.meiliao.common.commonwidget.FilterTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_music_panel_st"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:text="试听"
        app:cs_bg_radius="4dp"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        app:cs_border_style="all"
        android:padding="2dp"
        app:cs_border_width="0.7dp"
        app:cs_border_color="@color/textColor_teshe"
        android:textColor="@color/textColor_teshe"
        android:layout_height="wrap_content"/>
</LinearLayout>