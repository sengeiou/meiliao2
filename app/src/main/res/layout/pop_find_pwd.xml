<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    >


<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:orientation="vertical">
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll"
    android:layout_width="600px"
 android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:background="@drawable/normal_bg_white60"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<com.zhy.autolayout.AutoFrameLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="78px"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="44px"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
</com.zhy.autolayout.AutoFrameLayout>

<com.zhy.autolayout.AutoLinearLayout
android:gravity="center_horizontal"
    android:layout_marginLeft="66px"
    android:layout_marginRight="66px"
    android:layout_width="match_parent"
    android:layout_marginTop="56px"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_update_version_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="若要重置青少年密码，请发邮件至meiliao@51sqbb.com，主题命名为【青少年模式密码重置+账户的手机号】，邮件中请上传本人手持身份证照片，您的资料仅用于密码重置申诉；我们会尽快为您处理。"
        android:textColor="@color/black"
        android:textSize="30px"
        />
</com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_qd"
        android:layout_width="300px"
        android:layout_marginBottom="60px"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="确定"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:textSize="30px"
        android:gravity="center"
        android:background="@drawable/normal_bg_bule_px"
        />


</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>