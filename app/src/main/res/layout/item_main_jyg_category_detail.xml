<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginRight="@dimen/contorller_child_height"
    android:orientation="vertical"
    >


    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_jyg_category_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_loading_square"
        app:roundimageview_height_ratio="0.733"
        />


    <TextView
        android:id="@+id/tv_jyg_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_jyg_category_img"
        android:layout_below="@+id/iv_jyg_category_img"
        android:layout_marginTop="3dp"
        android:textColor="@color/textColor_333"
        android:textSize="12dp"
        tools:text="主标题"
        />

    <TextView
        android:id="@+id/tv_jyg_category_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_jyg_category_img"
        android:layout_below="@+id/tv_jyg_category_title"
        android:layout_marginTop="3dp"
        android:textColor="@color/textColor_999"
        android:textSize="10dp"
        tools:text="副标题"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_jyg_category_img"
        android:layout_below="@+id/tv_jyg_category_subTitle"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_jyg_category_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/night_backgroup_color"
            android:textSize="12dp"
            tools:text="老师"
            />

        <TextView
            android:id="@+id/tv_jyg_category_descript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/textColor_999"
            android:textSize="9dp"
            tools:text="身份"
            />
    </LinearLayout>

</RelativeLayout>

