<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content">
<RelativeLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:id="@+id/main"
    android:background="@drawable/normal_bg_white_update"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:background="@mipmap/fitness_share_bg"
        />
    <TextView
        android:id="@+id/tv_share"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="3.0"
        android:shadowColor="#4f000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="31dp"
        android:gravity="right"
        android:text="分享该课程\n
            好友购买后\n
            你可得50金币哦"

        android:lineSpacingExtra="8dp"
        android:textSize="23sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
                            还可帮好友节省30元\n
原价￥199，朋友购买只需￥169"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:lineSpacingExtra="8dp"
        android:textSize="12sp"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3.0"
        android:shadowColor="#4f000000"
        android:layout_marginRight="23dp"
        android:layout_below="@+id/tv_share"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_share_bottom"
        android:layout_width="166dp"
        android:layout_height="33dp"
        android:layout_below="@+id/iv_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/normal_bg_green9f"
        android:gravity="center"
        android:text="立即分享"
        android:textColor="@color/white"
        android:textSize="13sp" />
</RelativeLayout>

</RelativeLayout>