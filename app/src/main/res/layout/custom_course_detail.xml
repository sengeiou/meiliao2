<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_img"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_loading_square"
        app:roundimageview_height_ratio="0.646"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:textColor="@color/textColor_teshe5"
        android:textSize="18sp"
        tools:text=" ¥99"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_toLeftOf="@+id/tv_price"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColor_333"
        tools:text="10天深度睡眠"
        />



    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:textColor="@color/textColor_666"
        android:textSize="12sp"
        tools:text="2017-12-02至2017-12-08"
        />

    <TextView
        android:id="@+id/tv_address_or_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_time"
        android:layout_toRightOf="@+id/iv_img"
        android:textColor="@color/textColor_666"
        android:textSize="12sp"
        tools:text="北京"
        />
</merge>
