<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_common_height"
        >

        <ImageView
            android:id="@+id/iv_sjk_zhuanlan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/back1"/>


        <ImageView
            android:id="@+id/iv_sjk_zhuanlan_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_jyg_play_share_gray"/>

        <TextView
            android:id="@+id/tv_sjk_zhuanlan_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_sjk_zhuanlan_share"
            android:gravity="center"
            android:padding="6dp"
            android:text="关注"
            android:textColor="@color/textColor_teshe"/>

        <com.ziran.meiliao.common.commonwidget.FilterTextView
            android:id="@+id/tv_sjk_zhuanlan_big_in_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/tv_sjk_zhuanlan_follow"
            android:layout_toRightOf="@+id/iv_sjk_zhuanlan_back"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="大牌进驻"
            android:textColor="@color/textColor_333"
            android:textSize="16sp"
            app:cs_border_color="@color/divider"
            app:cs_border_style="left"
            app:cs_border_width="0.7dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        style="@style/hor_match_line"/>

    <com.ziran.meiliao.widget.ARewardV2View
        android:id="@+id/aRewardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_common_height"
        />
</LinearLayout>