<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_marginTop="31px"
    android:background="@drawable/normal_bg_gray_fc"
    android:layout_height="wrap_content">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_margin="20px"
        android:layout_width="206px"
        android:layout_height="234px"
        >
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:paddingRight="10px"
        android:layout_alignTop="@+id/iv_item_sjk_act_img"
        android:text="慈悲疗愈力元"
        android:textSize="32px"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxEms="7"
        android:textStyle="bold"
        android:textColor="@color/textColor_f333"
        android:id="@+id/tv_title"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14px"
        android:text="正念减压自我疗愈是三年时间不上班超声波差不多。"
        android:maxEms="11"
        android:textSize="24px"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/textColor_666666"
        android:paddingRight="4px"
        android:layout_marginRight="30px"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        />



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/all_num"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:layout_alignLeft="@+id/tv_content"
        >
    </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
android:layout_toRightOf="@+id/all_num"
    android:padding="3px"
    android:layout_alignBottom="@+id/iv_item_sjk_act_img"
    android:id="@+id/autoLinearLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="薛建新"
        android:id="@+id/tv_teacher_name"
        android:layout_gravity="center"
        android:textSize="24px"
        android:textColor="@color/textColor_f333"
        />
    <TextView
        android:id="@+id/tv_fh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  |  共"
        android:textSize="24px"
        android:textColor="@color/textColor_f333"
        />
    <TextView
        android:id="@+id/tv_js"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_f333"
        android:textSize="24px"
        android:text="21节"
        />
</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>