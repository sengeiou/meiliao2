<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_joinvip_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_joinvip_bg"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/iv_joinvip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_vip"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_joinvip_icon"
            android:layout_centerHorizontal="true"
            android:text="会员免费享用有效期内所有新发布的课程"
            android:textColor="@color/textColor_666"
            android:textSize="14sp"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_recharge_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        />

    <RelativeLayout
        android:id="@+id/check_wechat"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_tran_gray">

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:src="@mipmap/ic_me_pay_wechat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_wechat"
            android:gravity="center_vertical"
            android:text="微信支付"
            android:textColor="@color/textColor_333"
            android:textSize="18sp"/>

        <com.ziran.meiliao.widget.SmoothCheckBox
            android:id="@+id/smoothCheckBox_wechat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_margin="12dp"
            app:color_checked="@color/textColor_teshe"/>

        <View
            style="@style/hor_match_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_alipay"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/selector_tran_gray">

        <ImageView
            android:id="@+id/iv_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:src="@mipmap/ic_me_pay_alipay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_zhifubao"
            android:gravity="center_vertical"
            android:text="微信支付"
            android:textColor="@color/textColor_333"
            android:textSize="18sp"/>

        <com.ziran.meiliao.widget.SmoothCheckBox
            android:id="@+id/smoothCheckBox_zfb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            app:color_checked="@color/textColor_teshe"/>

        <View
            style="@style/hor_match_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"/>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_joinapp_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:background="@drawable/selector_btn_play"
        android:text="确认购买"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</LinearLayout>