<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_333"
        tools:text="88人支持"
        />

    <com.ziran.meiliao.ui.workshops.widget.SimpleProgressView

        android:id="@+id/simpleProgressView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:spv_unfinish_color="@color/black"
         app:spv_progress="200"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/tv_leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleProgressView"
        android:textColor="@color/textColor_999"
        android:textSize="11sp"
        tools:text="剩余99天"
        />

    <TextView
        android:id="@+id/tv_rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/simpleProgressView"
        android:textColor="@color/textColor_999"
        android:textSize="11sp"
        tools:text="目标99人"
        />

</RelativeLayout>