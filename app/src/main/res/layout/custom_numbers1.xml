<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:id="@+id/tv_finish_days_label"
            android:drawableTop="@mipmap/mdflnes_ic_days"
            android:text="连续天数"
            android:textColor="@color/textColor_666"
            />

        <TextView
            android:id="@+id/tv_finish_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor_teshe2"
            android:textSize="16sp"
            tools:text="7"
            />
    </LinearLayout>

    <View
        android:id="@+id/mind_line_1"
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white70"
        />

    <LinearLayout
        android:id="@+id/ll_mid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:id="@+id/tv_total_time_label"
            android:drawableTop="@mipmap/mdflnes_totaltime"
            android:text="总静观时间"
            android:textColor="@color/textColor_666"
            />

        <TextView
            android:id="@+id/tv_finish_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor_teshe7"
            android:textSize="16sp"
            tools:text="7"
            />
    </LinearLayout>

    <View
        android:id="@+id/mind_line_2"
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white70"
        />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:id="@+id/tv_mdflnes_count"
            android:drawableTop="@mipmap/mdflnes_course"
            android:text="静观次数"
            android:textColor="@color/textColor_666"
            />

        <TextView
            android:id="@+id/tv_finish_courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor_teshe6"
            android:textSize="16sp"
            tools:text="7"
            />
    </LinearLayout>
</LinearLayout>