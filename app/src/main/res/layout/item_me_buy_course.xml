<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/selector_tran_gray"
    android:paddingTop="12dp">


    <include
        android:id="@+id/include_smooth_checkbox"
        layout="@layout/include_smooth_checkbox"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_item_buy_course_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/include_smooth_checkbox" />

    <TextView
        android:id="@+id/tv_item_buy_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_buy_course_img"
        android:textColor="@color/textColor_333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_item_buy_course_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:textColor="@color/textColor_9f"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_buy_course_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_buy_course_img"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/iv_item_buy_course_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColor_9f"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_buy_course_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_item_buy_course_profile"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/iv_item_buy_course_img"
        android:textColor="@color/textColor_9f"
        android:textSize="16sp" />

    <View
        style="@style/hor_match_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp" />
</RelativeLayout>