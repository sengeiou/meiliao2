<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:ntb_tv_left="showAndFinish"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_xq"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="66px"
        android:layout_marginTop="170px"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="选择兴趣标签:"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_marginLeft="46px"
            android:textColor="#FF999999"
            android:textSize="28px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(最多可选6个兴趣标签)"

            />
    </com.zhy.autolayout.AutoLinearLayout>


<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/all_z_first"
    android:layout_width="wrap_content"
    android:layout_below="@+id/all_xq"
    android:layout_marginTop="60px"
    android:layout_marginLeft="44px"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/afl_bq1"
        >

        <com.ziran.meiliao.widget.ShadowRelativeLayout
            android:id="@+id/srl_1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:padding="10dp"
            bind:shadow_blur="16dp"
            android:background="@drawable/normal_bg_white_shadow"
            bind:shadow_color="@color/colorAccent_shandow"
            bind:shadow_radius="5px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/all_first"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="减压放松"
                android:textSize="28px"
                android:layout_gravity="center"
                />
            <ImageView

                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_gravity="center"
                android:layout_marginLeft="7px"
                android:src="@mipmap/ic_launcher"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/afl_bq1"
        >

        <com.ziran.meiliao.widget.ShadowRelativeLayout
            android:layout_width="160dp"
            android:id="@+id/srl_2"
            android:layout_height="80dp"
            android:padding="10dp"
            bind:shadow_blur="16dp"
            android:background="@drawable/normal_bg_white_shadow"
            bind:shadow_color="@color/colorAccent_shandow"
            bind:shadow_radius="5px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/all_two"
            android:layout_gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="减压放松"
                android:textSize="28px"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_gravity="center"
                android:layout_marginLeft="7px"
                android:src="@mipmap/ic_launcher"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_z_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/all_z_first">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/afl_bq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:id="@+id/srl_3"
                android:layout_height="80dp"
                android:background="@drawable/normal_bg_white_shadow"
                android:padding="10dp"
                bind:shadow_blur="16dp"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/all_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="减压放松"
                    android:textColor="#333333"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/afl_bq2">

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:id="@+id/srl_4"
                android:background="@drawable/normal_bg_white_shadow"
                android:padding="10dp"
                bind:shadow_blur="16dp"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/all_four"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="减压放松"
                    android:textColor="#333333"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_z_third"
        android:layout_width="wrap_content"
        android:layout_below="@+id/all_z_second"
        android:layout_marginLeft="44px"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afl_bq3"
            >

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:id="@+id/srl_5"
                bind:shadow_blur="16dp"
                android:background="@drawable/normal_bg_white_shadow"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/all_five"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="减压放松"
                    android:textSize="28px"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/afl_bq1"
            >

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:id="@+id/srl_6"
                android:padding="10dp"
                bind:shadow_blur="16dp"
                android:background="@drawable/normal_bg_white_shadow"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/all_six"
                android:layout_gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="减压放松"
                    android:textSize="28px"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_z_four"
        android:layout_width="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_below="@+id/all_z_third"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afl_bq4"
            >

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:id="@+id/srl_7"
                bind:shadow_blur="16dp"
                android:background="@drawable/normal_bg_white_shadow"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/all_seven"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="减压放松"
                    android:textSize="28px"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/afl_bq1"
            >

            <com.ziran.meiliao.widget.ShadowRelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:id="@+id/srl_8"
                android:padding="10dp"
                bind:shadow_blur="16dp"
                android:background="@drawable/normal_bg_white_shadow"
                bind:shadow_color="@color/colorAccent_shandow"
                bind:shadow_radius="5px"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/all_eight"
                android:layout_gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="减压放松"
                    android:textSize="28px"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7px"
                    android:src="@mipmap/ic_launcher"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoFrameLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:text="开启正念冥想之旅"
        android:textSize="36px"
        android:paddingBottom="27px"
        android:layout_alignParentBottom="true"
        android:paddingTop="27px"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120px"
        android:paddingLeft="138px"
        android:paddingRight="138px"
        android:background="@drawable/normal_bg_gray_c0"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoRelativeLayout>