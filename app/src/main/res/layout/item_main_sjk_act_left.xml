<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:paddingTop="8dp"
                android:background="@drawable/selector_tran_gray">

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_loading_rectangle"/>

    <TextView
        android:id="@+id/tv_item_sjk_act_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_act_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/course_icon_time"
        android:layout_marginBottom="4dp"
        android:layout_above="@+id/tv_item_sjk_act_place"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:drawablePadding="4dp"
        android:textColor="@color/textColor_9f"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_act_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/course_icon_add"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:ellipsize="end"
        android:drawablePadding="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp"
        android:maxLines="1"
        android:textColor="@color/textColor_9f"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_sjk_act_price"
        style="@style/TextViewLabelStyleRight"
        android:layout_marginRight="12dp"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:visibility="invisible"
        />

    <View
        style="@style/hor_match_line"
        android:layout_below="@+id/tv_item_sjk_act_price"
        android:layout_marginTop="8dp"/>
</RelativeLayout>