<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/background"
                android:background="@color/transparent_helf">


    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/ic_close"/>

    <ImageView
        android:id="@+id/iv_wechat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/iv_dismiss"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/iv_dismiss"
        android:orientation="vertical"
        android:src="@mipmap/living_share_wechat"/>

    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/iv_dismiss"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/iv_dismiss"
        android:orientation="vertical"
        android:src="@mipmap/living_share_qq"/>


</RelativeLayout>