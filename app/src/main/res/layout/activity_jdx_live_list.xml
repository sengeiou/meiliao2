<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
<com.ziran.meiliao.common.commonwidget.NormalTitleBar
    android:layout_width="match_parent"
    android:layout_marginTop="20px"
    android:id="@+id/ntb_title"
    android:layout_height="wrap_content">
</com.ziran.meiliao.common.commonwidget.NormalTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/ntb_title"
        android:layout_height="wrap_content">

<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:id="@+id/arl_top"
        android:background="@color/transparent"
        android:layout_below="@+id/ntb_title"
        android:layout_marginTop="50px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:id="@+id/all_top"
            android:layout_marginLeft="20px"
            android:layout_marginTop="64px"
            >
            <TextView
                    android:id="@+id/tv_title_ground"
                android:layout_width="match_parent"
                android:textSize="36px"
                android:text="今日我要将正念带入以下的日常活动  "
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:background="@drawable/normal_bg_white"
            android:id="@+id/recyclerView_top"
            android:layout_below="@+id/all_top"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_marginBottom="60px"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_title"
            android:paddingLeft="92px"
            android:paddingRight="92px"
            android:textSize="38px"
            android:layout_marginBottom="25px"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="15px"
            android:paddingBottom="10px"
            android:textColor="@color/white"
            android:layout_below="@+id/recyclerView_top"
            android:background="@drawable/normal_bg_green"
            />
    </com.zhy.autolayout.AutoRelativeLayout>



<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40px"

    android:layout_marginRight="40px"
    android:id="@+id/arl_bg"
    android:background="@color/white"
    android:layout_below="@+id/arl_top"
    android:layout_marginTop="50px"
    >
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px"
    android:id="@+id/all_bottom"
    android:layout_marginTop="10px"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="100px"
        android:layout_height="100px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:gravity="center"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_below="@+id/tv_content_diet"
            android:src="@mipmap/jdx_live_down"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/select_live"
        android:textSize="36px"
        android:layout_gravity="center"

        android:layout_toRightOf="@+id/tv_add"
        android:layout_height="wrap_content" />

</com.zhy.autolayout.AutoLinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@drawable/normal_bg_white"
        android:id="@+id/recyclerView_bottom"
        android:layout_below="@+id/all_bottom"
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:visibility="gone"
        android:layout_marginBottom="60px"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
    <com.ziran.meiliao.widget.BottomMbsrView
        android:layout_width="match_parent"
        android:id="@+id/bottom_exercise_view"
        android:visibility="invisible"
        android:layout_height="match_parent"/>
</com.zhy.autolayout.AutoRelativeLayout>