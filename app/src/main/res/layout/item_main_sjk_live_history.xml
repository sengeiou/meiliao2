<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/selector_tran_gray"
    >

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_sjk_live_course_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_loading_square"
        app:roundimageview_height_ratio="0.426"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_sjk_live_course_img"
        android:layout_alignLeft="@+id/iv_item_sjk_live_course_img"
        android:layout_alignRight="@+id/iv_item_sjk_live_course_img"
        android:background="@color/transparent10"
        android:padding="2dp"
        >

        <TextView
            android:id="@+id/tv_item_sjk_live_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_item_sjk_live_course_listerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@mipmap/ic_sjk_video_eye_white"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/rl_main_sjk_live_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_item_sjk_live_course_img"
        android:layout_alignRight="@+id/iv_item_sjk_live_course_img"
        android:layout_below="@+id/iv_item_sjk_live_course_img"
        android:orientation="horizontal"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/tv_item_sjk_live_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tv_item_sjk_live_course_lable"
            style="@style/TextViewLabelStyleRight"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            />
    </LinearLayout>
</RelativeLayout>