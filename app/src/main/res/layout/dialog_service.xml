<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_corner4"
        >
        <ImageView
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_close"
            android:src="@mipmap/ic_main_jyc_close"
            />

        <TextView
            android:id="@+id/tv_dialog_service_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客服咨询：15999999999"
            android:textColor="@color/textColor_333"
            android:textSize="16sp"
            />

        <com.ziran.meiliao.common.commonwidget.FilterTextView
            android:id="@+id/tv_dialog_service_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:background="@mipmap/btn_bg_pre"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="呼叫"
            android:textColor="@color/white"
            app:cs_bg_radius="24dp"
            />

    </RelativeLayout>


</FrameLayout>