<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="180dp"
    >

    <ImageView
        android:id="@+id/iv_jyg_audio_head_bg"
        tools:ignore="ContentDescription"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <com.ziran.meiliao.common.commonwidget.RoundImageView
            android:id="@+id/iv_jyg_audio_userHead"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/edge_margin"
            android:src="@mipmap/ic_loading_rectangle"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@mipmap/album_white_bg"
                />

            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="13dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_above="@+id/ll_detail"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_jyg_audio_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:maxLines="2"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:textColor="@color/textColor_333"
                        android:textSize="18sp"
                        tools:text=""
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_jyg_audio_vip"
                        style="@style/TextViewLabelStyle"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_tv_jyg_vip_bg"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/ll_title"
                    android:layout_height="wrap_content"
                    >


                    <TextView
                        android:id="@+id/tv_jyg_audio_anchor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_jyg_audio_list_count"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/iv_jyg_audio_userHead"
                        android:textColor="@color/textColor_666"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/album_listen_person"
                        android:layout_toLeftOf="@+id/tv_jyg_audio_anchor"
                        android:layout_alignBottom="@+id/tv_jyg_audio_anchor"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_jyg_audio_list_count"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/textColor_666"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </RelativeLayout>


</RelativeLayout>