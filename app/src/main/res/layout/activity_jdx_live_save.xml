<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@mipmap/jdx_bg_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.ziran.meiliao.common.commonwidget.NormalTitleBar
    android:layout_width="match_parent"
    android:layout_marginTop="20px"
    android:id="@+id/ntb_title"
    android:layout_height="wrap_content">

</com.ziran.meiliao.common.commonwidget.NormalTitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="50px"
        android:layout_below="@+id/ntb_title"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:visibility="gone"
        android:id="@+id/arl_bg"
        android:background="#99E0E0E0"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/all_top"
            android:layout_marginTop="64px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/everyday_inclined_to"
                android:textSize="32px"
                android:layout_gravity="center"

                android:layout_toRightOf="@+id/tv_add"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:background="@drawable/normal_bg_white"

            android:id="@+id/recyclerView_top"
            android:layout_below="@+id/all_top"
            android:layout_marginTop="41px"
            android:layout_width="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="46px"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_title"
                android:textColor="@color/white"
                android:paddingLeft="92px"
                android:paddingRight="92px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:layout_marginBottom="57px"
                android:layout_below="@+id/recyclerView_top"
                android:layout_centerHorizontal="true"
                android:background="@drawable/normal_bg_green"
                />
    </com.zhy.autolayout.AutoRelativeLayout>



            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:id="@+id/arl_bg_bottom"
                android:background="#99E0E0E0"
                android:layout_below="@+id/arl_bg"
                android:layout_marginTop="35px"
                >
                <android.support.v7.widget.RecyclerView
                    android:background="@drawable/normal_bg_white"

                    android:id="@+id/recyclerView_bottom"
                    android:layout_below="@+id/all_bottom"
                    android:layout_marginTop="40px"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="60px"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_bottom"
                    android:layout_marginTop="64px"
                    >
                    <TextView
                        android:layout_width="72px"
                        android:layout_height="72px"
                        android:layout_marginLeft="81px"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/tv_content_diet"
                        android:background="@mipmap/jdx_diet_add"
                        android:layout_marginRight="20px"
                        android:id="@+id/tv_add"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/select_live"
                        android:textSize="32px"
                        android:layout_gravity="center"

                        android:layout_toRightOf="@+id/tv_add"
                        android:layout_height="wrap_content" />

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoRelativeLayout>