<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_joinvip_bg"
            />

        <com.ziran.meiliao.common.commonwidget.NormalTitleBar
            android:id="@+id/ntb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ntb_bg="@color/transparent"
            app:ntb_right_img1="@mipmap/nav_servicer"
            app:ntb_title_text="订单详情"
            app:ntb_tv_left="showAndFinish"
            />


        <LinearLayout
            android:id="@+id/ll_avatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ntb"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_avatar1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_member_pic"
                />

            <View
                android:id="@+id/line_1"
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:background="@color/textColor_teshe"
                />

            <ImageView
                android:id="@+id/iv_avatar2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_member_pic"
                />

            <View
                android:id="@+id/line_2"
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_margin="6dp"
                android:background="@color/textColor_666"
                />

            <ImageView
                android:id="@+id/iv_avatar3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_member_pic"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_avatars"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:drawableLeft="@mipmap/myact_share_green"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="邀请好友一起拼单..."
            android:textColor="@color/textColor_teshe"
            android:textSize="13sp"
            />
    </RelativeLayout>


    <com.ziran.meiliao.ui.me.widget.CourseDetailView
        android:id="@+id/courseDetailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_top"
        />

    <com.ziran.meiliao.ui.me.widget.SomeTextView
        android:id="@+id/someTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseDetailView"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/someTextView"
        android:background="@color/divider1"
        />

    <com.ziran.meiliao.ui.me.widget.RefundView
        android:id="@+id/refundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/someTextView"
        />


</RelativeLayout>