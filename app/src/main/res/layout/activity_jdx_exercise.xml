<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/arl_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_jdx_exercise"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_70"
        android:scaleType="fitXY"
        android:id="@+id/iv_cover"
        />
<TextView
    android:id="@+id/tv_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@mipmap/exercise_back"
    android:padding="21px"
    android:layout_marginTop="70px"
    android:layout_marginLeft="40px"
    />

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/exercise_menu"
        android:layout_alignParentRight="true"
        android:padding="11px"
        android:layout_marginTop="81px"
        android:layout_marginRight="31px"
        android:layout_marginLeft="40px"
        />
<com.zhy.autolayout.AutoFrameLayout
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:id="@+id/afl"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/afl_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"

        >
        <ImageView
            android:id="@+id/iv_count_time"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_exercise_circle"
            />
        <com.cncoderx.wheelview.Wheel3DView
            android:id="@+id/wheel"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            app:selectedColor="@color/white"
            app:unselectedColor="@color/white"
            android:layout_marginLeft="79px"
            android:layout_marginRight="83px"
            android:visibility="invisible"
            android:layout_height="match_parent"
            app:cyclic="true"
            app:visibleItems="6"
            app:lineSpace="28px"
            app:textSize="24sp"
            app:entries="@array/exe_time_picker"
            app:toward="right"
            />
        <LinearLayout
            android:id="@+id/all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tv_set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="05:00"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textSize="12sp"
            android:layout_marginLeft="45dp"
            android:textColor="#D5D5D5"
            android:text="@string/miute"
            />
    </FrameLayout>
    <com.ziran.meiliao.widget.RippleBackground
        android:id="@+id/rippleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="@color/white90"
        app:rb_duration="6000"
        app:rb_radius="110dp"
        app:rb_rippleAmount="6"
        app:rb_scale="1.6"
        app:rb_strokeWidth="4dp"
        app:rb_type="strokeRipple">

    </com.ziran.meiliao.widget.RippleBackground>
</com.zhy.autolayout.AutoFrameLayout>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_bg_white_tran"
        android:layout_below="@+id/afl"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/start_exe"
        android:textSize="36px"
        android:paddingLeft="66px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingRight="66px"
        android:textColor="@color/white"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_playing"
        android:layout_below="@+id/afl"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:text="继续"
        android:textSize="36px"
        android:paddingTop="15px"
        android:paddingLeft="30px"
        android:paddingBottom="15px"
        android:paddingRight="30px"
        android:background="@drawable/normal_bg_white_33"
        android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="结束"
            android:textSize="36px"
            android:layout_marginLeft="40px"
            android:paddingTop="15px"
            android:paddingLeft="30px"
            android:textColor="@color/white"
            android:paddingBottom="15px"
            android:paddingRight="30px"
            android:background="@drawable/normal_bg_e0"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>

    <FrameLayout
        android:id="@+id/fl_mindfulness_hall_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="60dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_midfulness_hall_finish_bg"
                android:paddingBottom="12dp"
                >

                <TextView
                    android:id="@+id/tv_mindfulness_hall_cown_time_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="48dp"
                    android:text="Aiel完成15分钟的冥想"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />

                <com.ziran.meiliao.widget.CustomNumbers1View
                    android:id="@+id/customNumbersView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mindfulness_hall_cown_time_total_title"
                    android:layout_marginTop="16dp"
                    />

            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_mindfulness_hall_finish_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_user_pic"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_mindfulness_hall_finish_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="102dp"
            android:shadowColor="#aa000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="继续练习"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal"
            >

            <com.ziran.meiliao.common.commonwidget.FilterTextView
                android:id="@+id/tv_mindfulness_hall_finish_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="36dp"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/white"
                app:cs_bg_radius="20dp"
                app:cs_normal_bg_color="@color/textColor_teshe5"
                />

            <com.ziran.meiliao.common.commonwidget.FilterTextView
                android:id="@+id/tv_mindfulness_hall_finish_make_notes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="做笔记"
                android:textColor="@color/textColor_333"
                app:cs_bg_radius="20dp"
                app:cs_bg_style="white_gray"
                />
        </LinearLayout>

    </FrameLayout>
    <com.ziran.meiliao.widget.BottomExerciseView
        android:id="@+id/bottom_exercise_view1"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent"
        >

    </com.ziran.meiliao.widget.BottomExerciseView>

    <com.ziran.meiliao.widget.BottomMbsrView
        android:id="@+id/bottom_exercise_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"

        android:layout_marginTop="-3dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_share_day_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:text="每日首次分享可获取金币"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"

            />
    </com.ziran.meiliao.widget.BottomMbsrView>
</com.zhy.autolayout.AutoRelativeLayout>