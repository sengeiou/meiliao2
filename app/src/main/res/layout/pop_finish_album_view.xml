<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    xmlns:tools="http://schemas.android.com/tools">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_f"
        android:layout_width="match_parent"
        android:layout_marginTop="40px"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="415px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/jdx_bg_add_course" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="80px"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10px"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《MBSR八周练习册》11111111111"
                    android:maxEms="11"
                    android:lines="3"
                    android:textColor="#444444"
                    android:id="@+id/tv_name"
                    android:textSize="32px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二周"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:id="@+id/tv_week"
                    android:layout_marginTop="58px"
                    android:textSize="28px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系列课程中"
                android:visibility="gone"
                android:textSize="32px"
                android:layout_marginBottom="10px"
                android:textColor="#444444"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二周"
                android:visibility="gone"
                android:textSize="32px"
                android:layout_gravity="center_horizontal"
                android:textColor="#444444"
                android:id="@+id/tv_exercise"
                />
            <view
                android:layout_width="56px"
                android:background="#C1C1C1"
                android:visibility="gone"
                android:layout_marginTop="32px"
                android:layout_marginBottom="32px"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_share_exercise_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/share_jdx_close"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="感受慈悲心理"
                    android:textSize="36px"
                    android:textColor="#999999"
                    />
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/all_f"
        android:id="@+id/arl_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75px"
        android:background="@drawable/normal_bg_tran_half_two"
        android:layout_marginRight="75px"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35px"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="99px"
            android:gravity="center"
            android:id="@+id/autoRelativeLayout">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/all_time"
                >

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="72px"
                    android:textColor="#444444"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟"
                    android:textSize="20px"
                    android:textColor="#444444"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_marginTop="10px"
                android:layout_below="@+id/all_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="32px"
                android:text="练习时长"
                />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35px"
            android:layout_marginBottom="36px"
            android:layout_marginRight="100px"
            android:layout_marginLeft="99px"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/all_days"
                >

                <TextView
                    android:id="@+id/tv_num_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="72px"
                    android:textColor="#444444"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textSize="20px"
                    android:textColor="#444444"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_marginTop="10px"
                android:layout_below="@+id/all_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="32px"
                android:text="@string/exercise_days"
                />


        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_share"
        android:paddingLeft="92px"
        android:paddingRight="92px"
        android:textSize="38px"
        android:layout_marginBottom="15px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="15px"
        android:paddingBottom="10px"
        android:textColor="@color/white"
        android:layout_marginTop="20px"
        android:layout_below="@+id/arl_first"
        android:background="@drawable/normal_bg_green"
        />


    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@color/white"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="12dp"
                android:layout_toEndOf="@+id/iv_popuw_buy_video_coupon_pic"
                android:layout_toRightOf="@+id/iv_popuw_buy_video_coupon_pic"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_isbuy"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:maxLines="2"
                    android:textSize="26px"
                    tools:text="尚未购买该专辑"/>

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <View
                style="@style/hor_match_line"
                />
            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5px"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_need_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="接下播放: "
                        android:textColor="@color/textColor_999"/>

                    <TextView
                        android:id="@+id/tv_music_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10分钟静坐"
                        android:textColor="@color/textColor_999"
                        android:textSize="15sp"/>

                </LinearLayout>
            </com.zhy.autolayout.AutoFrameLayout>
            <LinearLayout
                android:id="@+id/ll_need_amount_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"

                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="《自我疗愈正念引导 》"
                    android:textStyle="bold"
                    android:textColor="@color/textColor_666666"
                    android:textSize="20sp"/>
            </LinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_buy_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/normal_bg_red"
                    android:paddingBottom="5dp"
                    android:text="购买专辑"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下次再说"
                            android:id="@+id/tv_back"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textColor_999"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>