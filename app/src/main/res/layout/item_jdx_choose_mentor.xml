<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20px"
    android:background="@color/white"
    android:layout_height="wrap_content">


<ImageView
    android:id="@+id/iv_mentor"
    android:layout_width="110px"
    android:layout_height="150px"
    android:layout_marginLeft="40px"
    android:background="@mipmap/ic_ewm"

    />
    <TextView
        android:id="@+id/tv_mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_toRightOf="@+id/iv_mentor"
        android:text="发发发"
        android:layout_marginTop="19px"
        android:layout_marginLeft="42px"
        android:textColor="#444444"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@drawable/normal_bg_tran_4"
        android:layout_marginTop="19px"
        android:layout_marginBottom="15px"
        android:layout_alignBottom="@+id/iv_mentor"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/tv_mentor_name"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_kc"
                android:layout_marginLeft="20px"
        android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="24px"
        android:layout_height="wrap_content"
        android:text="身体扫描"
        android:textColor="@color/login_text_color"
        />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="105px"
            android:layout_marginTop="13px"
            android:layout_marginBottom="13px"
            android:layout_width="44px"
            android:layout_toRightOf="@+id/tv_kc"
            android:id="@+id/tv_play"
            android:layout_marginRight="15px"
            android:layout_height="44px"
            android:background="@mipmap/jdx_choose_play"
            android:textColor="@color/login_text_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
    android:id="@+id/tv_choose"
    android:layout_width="58px"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20px"
    android:layout_height="58px"
    android:background="@drawable/bg_jdx_circle"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E0E0E0"
        android:layout_below="@+id/iv_mentor"
        android:layout_marginLeft="28px"
        android:layout_marginTop="13px"
        android:layout_marginRight="28px"
        />
</com.zhy.autolayout.AutoRelativeLayout>