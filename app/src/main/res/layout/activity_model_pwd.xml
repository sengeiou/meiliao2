<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all_Bg"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ntb_tv_left="showAndFinish"
        />

    <com.citypicker.citylist.widget.ClearEditText
        android:id="@+id/ed_pwd"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:hint="@string/input_pwd"
        android:paddingLeft="49px"
        android:layout_gravity="center"
        android:textSize="30px"

        android:layout_marginLeft="88px"
        android:layout_marginTop="200px"
        android:layout_marginRight="88px"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/textColor_b2"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_tran"
        />
    <com.citypicker.citylist.widget.ClearEditText
        android:id="@+id/ed_pwd_two"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:hint="@string/input_pwd_once"
        android:paddingLeft="49px"
        android:layout_gravity="center"
        android:textSize="30px"
        android:layout_marginLeft="88px"
        android:layout_marginTop="50px"
        android:layout_marginRight="88px"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/textColor_b2"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_tran"
        />


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="560px"
        android:layout_marginTop="100px"
        android:paddingTop="28px"
        android:paddingBottom="28px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:gravity="center"
        android:textSize="30px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/normal_bg_bule_px"
        android:text="开启青少年模式"
        />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:visibility="gone"
        android:textSize="28px"
        android:layout_marginTop="60px"
        android:layout_marginLeft="111px"
        android:textColor="#4D4D4D"
        />

</com.zhy.autolayout.AutoLinearLayout>