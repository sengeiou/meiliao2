<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="31px"
    android:layout_marginRight="31px"
    android:layout_marginTop="31px"
    android:background="@drawable/normal_bg_white_shadow10"
    android:layout_height="wrap_content">
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_margin="20px"
        android:layout_width="160px"
        android:layout_height="200px"
        >
    </ImageView>
    <TextView
        android:id="@+id/iv_item_sjk_act_label"
        android:layout_width="88px"
        android:layout_height="36px"
        android:text="热门"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textSize="22px"
        android:textColor="@color/white"
        android:background="@drawable/normal_bg_orange"
        />
    <TextView
        android:layout_width="wrap_content"
        android:paddingRight="10px"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:layout_alignTop="@+id/iv_item_sjk_act_img"
        android:text="慈悲疗愈力元旦"
        android:layout_marginRight="10px"
        android:textSize="32px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor_444"
        android:id="@+id/tv_title"
        />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17px"
        android:textSize="24px"
        android:lines="2" android:ellipsize="end"
        android:text="导师:胡君梅111111111111111111111111111111111111111111111"
        android:layout_marginRight="20px"
        android:textColor="@color/textColor_666666"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        />

    <TextView
        android:id="@+id/tv_address"
        android:textColor="@color/textColor_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:layout_marginTop="8px"
        android:text="深圳"
        android:layout_alignLeft="@+id/tv_teacher_name"
        android:layout_below="@+id/tv_teacher_name"
        />
    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/textColor_666666"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_address"
        android:textSize="24px"
        android:layout_marginTop="8px"
        android:text="1月1日开课"
        android:paddingRight="15px"
        android:layout_below="@+id/tv_teacher_name"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/all_num"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_bg_read_7460"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:layout_alignLeft="@+id/tv_teacher_name"
        >

    </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    android:layout_marginRight="45px"
    android:layout_alignBottom="@+id/iv_item_sjk_act_img"
    android:id="@+id/autoLinearLayout2"

    >
    <TextView
        android:id="@+id/tv_fh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="26px"
        android:textColor="#ED7460"
        />
    <TextView
        android:id="@+id/tv_price"
        android:textColor="#ED7460"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888"
        android:textSize="26px"
        />
</com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/autoLinearLayout2"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/iv_item_sjk_act_img"
        android:padding="2px"
        android:text="仅剩7位"
        android:layout_marginTop="3px"
        android:background="@drawable/normal_bg_red_tran"
        android:textColor="#ED7460"
        android:textSize="24px" />

</com.zhy.autolayout.AutoRelativeLayout>