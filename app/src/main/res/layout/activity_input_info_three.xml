<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        app:ntb_tv_left="showAndFinish"
        android:layout_height="wrap_content"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传本人真实照片"
        android:textStyle="bold"
        android:layout_marginLeft="80px"
        android:textSize="48px"
        android:textColor="@color/textColor_4c"
        android:layout_marginTop="73px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五官清晰的照片，优先获得匹配"
        android:layout_marginLeft="80px"
        android:textSize="26px"
        android:textColor="#7c7c7c"
        android:layout_marginTop="35px"
        />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="272px"
    android:gravity="center"
    android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@mipmap/info_photo_circle"
            />

</com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="match_parent"
        android:layout_marginLeft="88px"
        android:layout_marginRight="88px"
        android:layout_height="88px"
        android:layout_marginTop="200px"
        android:text="@string/finish"
        android:paddingLeft="92px"
        android:paddingRight="92px"
        android:enabled="false"
        android:layout_gravity="center"
        android:textSize="30px"
        android:layout_marginBottom="60px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_bule50"
        />


</com.zhy.autolayout.AutoLinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dot_one"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/shape_dot_bule50"
            />
        <ImageView
            android:id="@+id/iv_dot_two"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/iv_dot_one"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/shape_dot_bule50"

            />
        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/iv_dot_two"
            android:src="@drawable/shape_dot_bule"

            />

    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>