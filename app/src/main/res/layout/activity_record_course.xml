<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_mindfulness_hall_bg"
        android:layout_width="match_parent"
        android:background="#f7f7f5"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        />

    <FrameLayout
        android:id="@+id/fl_mindfulness_hall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_mindfulness_hall_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/arrow_back_blackbg"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_mindfulness_hall_top"
        />
</RelativeLayout>