<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_share_exercise_layout"
        ></com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:padding="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:src="@mipmap/ic_close_black"
        android:layout_alignParentRight="true"
        />
<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_bottom_myshot"
    android:padding="54px"
    android:background="#FCFCFC"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:layout_marginTop="110px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/all_head"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_exercise_user_head"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_width="64px"
        android:layout_height="64px"
        />
    <TextView
        android:id="@+id/tv_share_exercise_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="17px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="nicole"
        android:textSize="28px" />



</com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_f"
        android:layout_below="@+id/all_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="415px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/jdx_bg_add_course"
                />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="80px"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10px"
    >
    <TextView
        android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="《MBSR八周练习册》"
        android:maxEms="11"
    android:textColor="@color/white"
    android:id="@+id/tv_name"
    android:textSize="32px"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="——"
        />
    <TextView
        android:id="@+id/tv_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二周"
        android:textColor="#444444"
        android:visibility="gone"
        android:id="@+id/tv_week"
        android:layout_marginTop="58px"
        android:textSize="28px"
        />

</com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系列课程中"
                android:visibility="gone"
                android:textSize="32px"
                android:layout_marginBottom="10px"
                android:textColor="#444444"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二周"
                android:visibility="gone"
                android:textSize="32px"
                android:layout_gravity="center_horizontal"
                android:textColor="#444444"
                android:id="@+id/tv_exercise"
                />
            <View
                android:layout_width="56px"
                android:background="#C1C1C1"
                android:visibility="gone"
                android:layout_marginTop="32px"
                android:layout_marginBottom="32px"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="感受慈悲心理"
                    android:textSize="36px"
                    android:textColor="#999999"
                    />
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_data"
        android:layout_below="@+id/all_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_bg_tran_half_two"
        >
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="35px"
    android:layout_marginBottom="36px"
    android:layout_marginLeft="99px"
    android:gravity="center"
    android:id="@+id/autoRelativeLayout">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/all_time"
        >

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="72px"
            android:textColor="#444444"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟"
            android:textSize="20px"
            android:textColor="#444444"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_marginTop="10px"
        android:layout_below="@+id/all_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="32px"
        android:text="练习时长"
        />


</com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35px"
            android:layout_marginBottom="36px"
            android:layout_marginRight="100px"
            android:layout_marginLeft="99px"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/all_days"
                >

                <TextView
                    android:id="@+id/tv_num_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="72px"
                    android:textColor="#444444"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textSize="20px"
                    android:textColor="#444444"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_marginTop="10px"
                android:layout_below="@+id/all_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="32px"
                android:text="@string/exercise_days"
                />


        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:id="@+id/arl_code"
        android:layout_height="160px"
        android:layout_below="@+id/arl_data"
        android:layout_alignLeft="@+id/arl_data"
        android:layout_alignRight="@+id/arl_data"
        android:background="@drawable/normal_bg_tran_a"
        >

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:textColor="#FFFEB675"
            android:layout_centerVertical="true"
            android:text="长按识别图中二维码"
            android:textSize="28px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18px"
            android:id="@+id/tv_app"
            android:layout_below="@+id/tv_code"
            android:gravity="center_vertical"
            android:layout_marginLeft="54px"
            android:layout_marginTop="5px"
            android:text="关注5P医学APP"
            />

        <ImageView
            android:id="@+id/tv_exercise_qrcode"
            android:layout_width="129px"
            android:layout_marginRight="20px"
            android:layout_height="129px"
            android:layout_alignStart="@+id/ll_share_exercise"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_qrcode" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ll_share_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="345dp"
            android:layout_marginEnd="56dp">

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_share"
        android:paddingLeft="92px"
        android:paddingRight="92px"
        android:textSize="38px"
        android:layout_marginBottom="15px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="15px"
        android:paddingBottom="10px"
        android:textColor="@color/white"
        android:layout_marginTop="20px"
        android:layout_below="@+id/rl_bottom_myshot"
        android:background="@drawable/normal_bg_green"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_first"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_share_exercise_close"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_white_corner8">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E0E0E0" />

        <com.ziran.meiliao.widget.MoreImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/moreImageView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="35px"
            android:layout_marginLeft="30px"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginRight="30px"
            android:layout_marginTop="35px"
            app:moreImageView_count="2"
            app:moreImageView_default_data="share_4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/moreImageView"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moreImageView"
            android:layout_centerHorizontal="true"
            android:padding="31px"
            android:text="取消 "

            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_share_exercise_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@mipmap/share_jdx_close"/>

</com.zhy.autolayout.AutoRelativeLayout>