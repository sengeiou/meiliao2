<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="31px"
    android:layout_marginRight="31px"
    android:layout_marginTop="31px"
    android:background="@drawable/normal_bg_white_shadow10"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/include_smooth_checkbox"
        layout="@layout/include_smooth_checkbox"
        android:visibility="gone" />
    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_margin="20px"
        android:layout_width="160px"
        android:layout_height="200px"
        >
    </ImageView>
    <TextView
        android:id="@+id/iv_item_sjk_act_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门"
        android:paddingLeft="5px"
        android:paddingBottom="2px"
        android:paddingTop="2px"
        android:paddingRight="5px"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textSize="12px"
        android:textColor="@color/white"
        android:background="@color/red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:paddingRight="10px"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_sjk_act_img"
        android:layout_alignTop="@+id/iv_item_sjk_act_img"
        android:text="慈悲疗愈力元旦"
        android:layout_marginRight="10px"
        android:textSize="32px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor_444"
        android:id="@+id/tv_title"
        />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17px"
        android:textSize="24px"
        android:lines="2" android:ellipsize="end"
        android:text="导师:胡君梅111111111111111111111111111111111111111111111"
        android:textColor="@color/textColor_666666"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:textColor="@color/textColor_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:maxEms="13"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="8px"
        android:text="深圳22222222222111111111111111111111111111111111111111111222"
        android:layout_alignLeft="@+id/tv_teacher_name"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/all_num"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_bg_read_7460"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:layout_alignLeft="@+id/tv_teacher_name"
        >

    </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    android:layout_marginRight="45px"
    android:layout_alignBottom="@+id/iv_item_sjk_act_img"
    android:id="@+id/autoLinearLayout2"

    >
    <TextView
        android:id="@+id/tv_person"
        android:textColor="#F0AE5C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888"
        android:textSize="24px"
        />
</com.zhy.autolayout.AutoLinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="12px"
    android:layout_below="@+id/autoLinearLayout2"
    android:layout_marginTop="57px"
    android:background="#FAFAFA"
    />

</com.zhy.autolayout.AutoRelativeLayout>