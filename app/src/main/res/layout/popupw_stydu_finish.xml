<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_helf"
                android:orientation="vertical"
    >


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <com.ziran.meiliao.common.commonwidget.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/course_pop_learnedbg"
            app:roundimageview_height_ratio="1.352"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/ic_user_pic"
                />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="获取成功"
                android:textColor="@color/textColor_333"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="正在5P医学APP学习系列课程"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="正念在成瘾群体的应用"
                android:textColor="@color/textColor_333"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="第一课：正念如何融入一天的工作与生活"
                android:textColor="@color/textColor_333"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_rq_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/login_qrcode"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="扫码观看精彩课程"
                android:textColor="@color/textColor_666"
                android:textSize="12sp"
                />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/fl_content"
        android:layout_alignRight="@+id/fl_content"
        android:layout_below="@+id/fl_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/moreImageView"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/living_share_wechatzone"
            />
        <!--  <com.ziran.meiliao.widget.MoreImageView
              android:id="@+id/moreImageView"
              android:layout_width="match_parent"
              android:layout_height="54dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              app:moreImageView_default_data="share_4"
              />
  -->
        <ImageView
            android:id="@+id/iv_popup_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/ic_close"
            android:visibility="visible"
            />
    </LinearLayout>

</RelativeLayout>