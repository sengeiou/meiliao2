<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:id="@+id/background"
              android:layout_height="match_parent"
              android:gravity="bottom"
    android:paddingBottom="20dp"
              android:background="@color/transparent_helf"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_custom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.ziran.meiliao.widget.MoreImageView
            android:layout_width="wrap_content"
            android:id="@+id/moreImageView"
            android:layout_gravity="center"

            android:layout_height="160dp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="77dp"

            app:moreImageView_default_data="share_white"
            />


        <View style="@style/hor_match_line"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_tran_gray"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>