<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    android:layout_width="match_parent"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:id="@+id/afl_bq1"
    >

    <com.ziran.meiliao.widget.ShadowRelativeLayout
        android:id="@+id/srl_1"
        android:layout_width="match_parent"
        android:layout_height="254px"
        android:padding="10dp"
        bind:shadow_blur="16dp"
        android:background="@drawable/normal_bg_white_shadow"
        bind:shadow_color="@color/colorAccent_shandow"
        bind:shadow_radius="5px"
        />
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    >


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="221px"
        android:layout_height="154px"
        android:layout_marginLeft="50px"
        android:scaleType="fitXY"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/all_first"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22px"
        android:layout_toRightOf="@+id/iv_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="减压放松"
            android:textSize="32px"

            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="￥20"
            android:paddingTop="3px"
            android:paddingBottom="3px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:layout_marginTop="10px"
            android:background="@drawable/normal_bg_red"
            android:textSize="24px"
            />
        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DCC38D"
            android:text="需20积分"
            android:layout_marginTop="35px"
            android:textSize="24px"
            />

    </com.zhy.autolayout.AutoLinearLayout>



    <TextView
        android:id="@+id/tv_exchange"
        android:layout_width="140px"
        android:layout_height="68px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#58BEA8"
        android:textSize="32px"
        android:layout_marginLeft="97px"
        android:text="兑换"
        android:background="@drawable/normal_bg_green_tran_bg"
        />
</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>