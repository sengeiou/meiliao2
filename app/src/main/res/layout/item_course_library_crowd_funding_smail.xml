<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >


    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_loading_rectangle"
        />

    <TextView
        android:id="@+id/tv_item_workshops_main_crowd_funding_title"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:textColor="@color/textColor_333"
        android:layout_marginRight="12dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="正念减压四日3333333333333333333工作坊"
        />

    <LinearLayout
        android:id="@+id/ll_item_workshops_main_crowd_funding_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:layout_below="@+id/tv_item_workshops_main_crowd_funding_title"
        android:layout_above="@+id/progressTipsView"
        android:gravity="bottom"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_item_workshops_main_crowd_funding_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor_teshe5"
            android:textSize="18sp"
            tools:text=" ¥99"
            />

        <TextView
            android:id="@+id/tv_item_workshops_main_crowd_funding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@mipmap/ic_time"
            android:gravity="center"
            tools:text="2天1晚"
            />
    </LinearLayout>

    <com.ziran.meiliao.ui.workshops.widget.ProgressTipsView
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:id="@+id/progressTipsView"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:layout_toRightOf="@+id/iv_item_workshops_main_crowd_funding_pic"
        android:layout_marginTop="4dp"
        />
</RelativeLayout>