<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="20px"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_width="260px"
        android:layout_height="150px"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_loading_rectangle" />
    <TextView
        android:id="@+id/iv_item_sjk_act_label"
        android:layout_width="wrap_content"
        android:layout_height="36px"
        android:text="静心"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:textSize="24px"
        android:textColor="@color/white"
        android:background="@drawable/normal_bg_orange_half"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="260px"
        android:layout_height="109px"
        android:layout_marginTop="140px"
        android:background="@drawable/normal_bg_tran_half_three"

        >


        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="13px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静心冥想"
            android:maxLines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="30px"
            android:layout_marginLeft="20px"
            android:textColor="#FF333333"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textSize="21px"
            android:layout_marginTop="10px"
            android:textColor="#FF999999"
            android:text="正念减压自我疗愈。"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="20px"
            android:layout_below="@+id/tv_title"
            />





    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>