<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical">


    <cn.rongcloud.live.ui.widget.ChatListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:scrollbars="none"
        android:transcriptMode="alwaysScroll"/>

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_common_height"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:background="@color/titleBar_bg"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/input_editor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#666666"
            android:imeOptions="actionSend"
            android:imeActionLabel="发送"
            android:textSize="14sp"
            tools:text="2222222222"/>

        <ImageView
            android:id="@+id/tv_sjk_fulllive_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/ic_sjk_full_living_send"
            />
    </LinearLayout>

</LinearLayout>