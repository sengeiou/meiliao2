<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_mindfulness_hall_bg"
        android:layout_width="match_parent"
        android:background="#f7f7f5"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        />

    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        app:ntb_tv_left="showAndFinish"
        app:ntb_title_text=""
        android:id="@+id/ntb_title"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_mindfulness_hall_top"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_mindfulness_hall_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/arrow_back_blackbg"
            />

        <ImageView
            android:id="@+id/iv_record_calendar_or_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:src="@mipmap/me_mdflnes_ic_data"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/ntb_title"
        />
</RelativeLayout>