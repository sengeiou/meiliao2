<?xml version="1.0" encoding="utf-8"?>
<com.ziran.meiliao.widget.SlideLayoutNew
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.ziran.meiliao.common.commonwidget.RoundImageView
                    android:id="@+id/iv_item_my_bank_list_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_loading_square_small"
                    />


                <TextView
                    android:id="@+id/tv_item_my_bank_list_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="78dp"
                    android:text="农业银行"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_item_my_bank_list_card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_my_bank_list_bank"
                    android:layout_marginTop="4dp"
                    android:layout_alignLeft="@+id/tv_item_my_bank_list_bank"
                    android:text="储蓄卡"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_item_my_bank_list_card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_my_bank_list_card_type"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/tv_item_my_bank_list_bank"
                    android:text="**** **** **** 9999"
                    android:textSize="20sp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/slide_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/selector_course_list_red"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:text="解除\n绑定"/>
    </FrameLayout>

</com.ziran.meiliao.widget.SlideLayoutNew>