<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:background="@mipmap/jdx_bg_diet"
    />
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:layout_height="wrap_content"
        android:id="@+id/ntb_title"
        >

    </com.ziran.meiliao.common.commonwidget.NormalTitleBar>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_select"
        android:layout_width="match_parent"
        android:layout_below="@+id/ntb_title"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:background="@drawable/normal_bg_white4"
        >
     <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/nice_spinner_first"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="18px"
         android:layout_marginRight="30px"
         android:layout_marginBottom="18px"
         app:arrowDrawable="@mipmap/spinner_icon"
         />

        <org.angmarch.views.NiceSpinner
            android:id="@+id/nice_spinner_second"
            android:layout_width="192px"
            android:layout_marginLeft="30px"
            android:layout_height="58px"
            android:layout_marginTop="18px"
            android:layout_marginBottom="18px"
            android:visibility="invisible"
            app:arrowDrawable="@mipmap/spinner_icon"
            />
    </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:background="@drawable/normal_bg_white4"
    android:layout_below="@+id/all_select"
    >
<com.zhy.autolayout.AutoFrameLayout
    android:id="@+id/afl"
    android:layout_width="match_parent"
    android:layout_marginTop="42px"
    android:layout_marginRight="42px"
    android:layout_marginLeft="42px"
    android:layout_marginBottom="22px"
    android:layout_height="wrap_content"
    >


    <com.ziran.meiliao.widget.CustomEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:hint="想记录的内容写在这里"
        android:textSize="28px"
        android:padding="38px"
        android:textColor="#999999"
        android:background="@drawable/edit_bg_gray_other"
        />

    <TextView
        android:id="@+id/tv_voice"
        android:layout_width="wrap_content"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:layout_height="wrap_content"
        android:text="点击使用语音输入"
        android:textSize="21px"
        android:drawablePadding="10px"
        android:visibility="gone"
        android:drawableLeft="@mipmap/jdx_no_speak"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="30px"
        />



</com.zhy.autolayout.AutoFrameLayout>


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_title"
        android:paddingLeft="92px"
        android:paddingRight="92px"
        android:textSize="38px"
        android:layout_marginBottom="15px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="15px"
        android:paddingBottom="10px"
        android:textColor="@color/white"
        android:layout_below="@+id/afl"
        android:background="@drawable/normal_bg_green"
        />

</com.zhy.autolayout.AutoRelativeLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="60px"
    android:layout_below="@+id/arl_first"
    >
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日正念饮食统计"
        android:layout_below="@+id/arl_first"
        android:layout_marginLeft="51px"
        android:textColor="@color/white"
        android:textSize="38px"
        />
    <TextView
        android:id="@+id/tv_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_data"
        android:text="1"
        android:textColor="#FFB533"
        android:textSize="60px"
            android:layout_marginLeft="25px"
        android:layout_marginRight="25px"

        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="38px"
    android:text="次"
    />
</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>