<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fl_media_contorller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_contorller_toast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_live_video_bg"
            android:gravity="center"
            android:text="购买以后才能观看"
            android:textColor="@color/white"
            android:visibility="gone"
            />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_contorller_item_height"
        android:background="@color/contorller_bar_bg"
        >

        <ImageView
            android:id="@+id/iv_contorller_back"
            android:layout_width="@dimen/contorller_child_height"
            android:layout_height="@dimen/contorller_child_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/tv_controller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/ll_controller_right"
            android:layout_toRightOf="@+id/iv_contorller_back"
            android:ellipsize="middle"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_controller_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_contorller_lister"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contorller_child_height"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_marginRight="12dp"
                android:drawableLeft="@mipmap/ic_sjk_live_list_eye"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                >

                <ImageView
                    android:id="@+id/iv_contorller_like"
                    android:layout_width="@dimen/contorller_child_height"
                    android:layout_height="@dimen/contorller_child_height"
                    android:visibility="gone"
                    android:src="@mipmap/ic_sjk_live_list_like"
                    />

                <TextView
                    android:id="@+id/tv_contorller_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_contorller_collect"
                android:layout_width="@dimen/contorller_child_height"
                android:visibility="gone"
                android:layout_height="@dimen/contorller_child_height"
                android:layout_marginRight="12dp"
                android:src="@drawable/selector_select_collect_white"
                />

            <TextView
                android:id="@+id/tv_contorller_gz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_contorller_share"
                android:layout_width="@dimen/contorller_child_height"
                android:layout_height="@dimen/contorller_child_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/ic_sjk_live_list_share"
                />

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_contorller_item_height"
        android:layout_alignParentBottom="true"
        android:background="@color/contorller_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <com.ziran.meiliao.widget.PlayPauseView
            android:id="@+id/playPauseView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />

        <com.ziran.meiliao.widget.MyProgressView
            android:id="@+id/myProgressView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:MyProgressView_textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iv_contorller_full"
            android:layout_width="@dimen/contorller_child_height"
            android:layout_height="@dimen/contorller_child_height"
            android:src="@mipmap/ic_sjk_live_list_full"
            />


    </LinearLayout>


</RelativeLayout>