<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/jdx_bg_happy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.ziran.meiliao.common.commonwidget.NormalTitleBar
    android:layout_width="match_parent"
    android:id="@+id/ntb_title"
    android:layout_marginTop="20px"
    android:layout_height="wrap_content">

</com.ziran.meiliao.common.commonwidget.NormalTitleBar>

<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:layout_below="@+id/ntb_title"
    android:layout_marginLeft="40px"
    android:background="@drawable/normal_bg_white"
    android:layout_marginRight="40px"
    >

    <ImageView
        android:id="@+id/iv_me_main_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57px"
        android:layout_marginLeft="80px"
        android:src="@mipmap/ic_user_pic" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="32px"
            android:text="222"
            android:layout_marginLeft="28px"
            android:layout_marginTop="86px"
            android:layout_toRightOf="@+id/iv_me_main_avatar"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_user_name"
    android:layout_alignLeft="@+id/tv_user_name"
    android:text="wwwwwwwwwwww"
    android:textColor="#444444"
    />

    <TextView
        android:layout_below="@+id/iv_me_main_avatar"
        android:layout_width="wrap_content"
        android:layout_marginTop="14px"
        android:id="@+id/tv_title"
        android:textSize="28px"
        android:textColor="#444444"
        android:text="222222222222222222222222222222222"
        android:layout_alignLeft="@+id/iv_me_main_avatar"
        android:layout_height="wrap_content" />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/all_num"
    android:layout_marginTop="20px"
    android:layout_below="@+id/tv_title"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/all_first"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/iv_me_main_avatar"
        android:layout_below="@+id/tv_title"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/tv_day"
            android:textColor="@color/login_text_color"
            android:textSize="72px"
            />
        <TextView
            android:textColor="@color/textColor_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keep_going_day"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98px"
        android:gravity="center"
        android:id="@+id/all_second"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/all_first"
        android:layout_below="@+id/tv_title"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="117"
            android:id="@+id/tv_exe_time"
            android:textColor="@color/login_text_color"
            android:textSize="72px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exe_time"
            android:textColor="@color/textColor_999"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98px"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/all_second"
        android:layout_below="@+id/tv_title"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/tv_exe_times"
            android:textColor="@color/login_text_color"
            android:textSize="72px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exe_times"
            android:textColor="@color/textColor_999"
            />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
<View
    android:id="@+id/view_line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="50px"
    android:layout_below="@+id/all_num"
    android:background="#E0E0E0"
    />

    <TextView
        android:id="@+id/tv_xljt"
        android:layout_width="match_parent"
        android:layout_marginTop="47px"
        android:layout_below="@+id/view_line"
        android:layout_height="200px" />

    <TextView
        android:textColor="#45C49D"
        android:layout_below="@+id/tv_xljt"
        android:background="@drawable/normal_bg_green_tran"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:layout_width="wrap_content"
        android:layout_marginTop="100px"
        android:textSize="40px"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:layout_marginBottom="30px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/action_share"
        />
</com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>