<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/top_line"
            style="@style/hor_match_line_8dp"
      />

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_course_library_teacher_detail_team_pic"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_loading_square_big"
        app:roundimageview_height_ratio="0.381"
        />

    <TextView
        android:id="@+id/tv_item_course_library_teacher_detail_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_course_library_teacher_detail_team_pic"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/iv_item_course_library_teacher_detail_team_pic"
        android:maxLines="2"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"
        tools:text="正念翻转小课堂，寒假班开班啦～！"
        />


    <TextView
        android:id="@+id/tv_item_course_library_teacher_detail_team_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_course_library_teacher_detail_team_title"
        android:drawableLeft="@mipmap/ic_persons"
        android:gravity="center"
        android:layout_alignLeft="@+id/iv_item_course_library_teacher_detail_team_pic"
        android:textSize="12sp"
        tools:text="99-999"
        />

    <TextView
        android:id="@+id/tv_item_course_library_teacher_detail_team_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_course_library_teacher_detail_team_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_item_course_library_teacher_detail_team_people"
        android:drawableLeft="@mipmap/ic_time"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="2天1晚"
        />

    <TextView
        android:id="@+id/tv_item_workshops_main_team_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_item_course_library_teacher_detail_team_pic"
        android:layout_alignBottom="@+id/tv_item_course_library_teacher_detail_team_date"
        android:text=" ¥99"
        android:textColor="@color/textColor_teshe5"
        android:textSize="18sp"
        />
    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_item_course_library_teacher_detail_team_date"
         style="@style/hor_match_line" />
</RelativeLayout>