<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent60"
              android:clipChildren="false"
              android:orientation="vertical"
    >

    <View
        android:id="@+id/touch_outside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_popuw_buy_album_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="16sp"
                    tools:text="7天深度睡眠"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_album_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="您有"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_album_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_goal"
                    android:gravity="center"
                    android:drawablePadding="4dp"
                    android:padding="4dp"
                    android:textSize="13sp"
                    tools:text="200"/>
            </LinearLayout>



            <com.ziran.meiliao.common.commonwidget.RoundImageView
                android:id="@+id/iv_popuw_buy_album_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <View
                style="@style/hor_match_line"
                />
        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_need_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/icon_goal"
                    android:drawableRight="@mipmap/icon_goal"
                    android:text="原价  "
                    android:layout_gravity="center"
                    android:textColor="@color/textColor_999"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_album_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/textColor_333"
                    android:textSize="16sp"
                    tools:text="30"/>

            </LinearLayout>
            <View
                android:layout_width="320px"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
        </com.zhy.autolayout.AutoFrameLayout>
            <LinearLayout
                android:id="@+id/ll_need_amount_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_member_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="会员价  "
                    android:textStyle="bold"
                    android:textColor="@color/price_red"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/icon_goal"
                    android:drawableRight="@mipmap/icon_goal"
                    android:gravity="center"
                    android:text="  "
                    android:textColor="@color/red"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_popuw_buy_album_amount_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/price_red"

                    android:textSize="20sp"
                    tools:text="30"/>
            </LinearLayout>
            <com.ziran.meiliao.common.commonwidget.FilterTextView
                android:id="@+id/iv_popuw_buy_album_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:background="@mipmap/btn_bg"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="确认购买"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

