<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/iv_item_sjk_act_img"
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:scaleType="fitXY"
        android:background="@mipmap/ic_loading_square_big"
        />




    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_times"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/iv_item_sjk_act_img"
        android:background="@mipmap/item_boot_bg"
        android:layout_height="71px">




    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>