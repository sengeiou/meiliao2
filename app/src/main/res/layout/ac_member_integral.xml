<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        app:ntb_tv_left="showAndFinish"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="523px"
        android:layout_below="@+id/ntb"
        android:background="@mipmap/member_card_bg"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@+id/ntb"
        android:layout_marginRight="63px"
        android:layout_marginTop="76px"
    android:layout_marginLeft="59px"
    >

        <ImageView
            android:id="@+id/iv_level_bg"
            android:layout_width="match_parent"
            android:layout_height="330px"
            />
    <ImageView
        android:id="@+id/iv_me_main_avatar"
        android:layout_width="106px"
        android:layout_marginTop="38px"
        android:layout_alignTop="@+id/arl_card"
        android:layout_marginLeft="40px"
        android:layout_height="106px"
        android:src="@mipmap/ic_user_pic"
        />

    <TextView
        android:layout_below="@+id/ntb_title"
        android:id="@+id/tv_user_name"
        android:layout_marginLeft="16px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arl_card"
        android:layout_marginTop="55px"
        android:layout_marginBottom="14px"
        android:layout_toRightOf="@+id/iv_me_main_avatar"
        android:text="小明"
        android:textColor="@color/textColor_333"
        android:textSize="28px"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_star"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        >
        <ImageView
            android:id="@+id/iv_small_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/member_star"
            />
        <TextView
            android:id="@+id/tv_member_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39px"
            android:text="钻石会员"
            android:textColor="@color/white"
            android:textSize="17px" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_me_main_avatar"
        android:text="3400"
        android:layout_marginLeft="44px"
        android:layout_marginTop="67px"
        android:textColor="@color/white"
        android:textSize="48px"
        />
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/all_integral_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_integral"
    android:layout_alignLeft="@+id/tv_integral"
    >
    <TextView
        android:id="@+id/tv_jfmx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分明细"
        android:textSize="20px"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="9px"
        android:layout_height="12px"
        android:layout_marginLeft="10px"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@mipmap/exe_begin_play"
        />

</com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="17px"
        android:layout_toRightOf="@+id/arl_star"
        android:layout_alignTop="@+id/arl_star"
        >
        <TextView
            android:id="@+id/tv_progress_first"
            android:layout_width="wrap_content"
            android:layout_marginTop="15px"
            android:layout_height="wrap_content"
            android:text="333"
            android:textSize="16px"
            android:textColor="@color/white"
            />

        <ProgressBar
            android:max="100"
            android:progressDrawable="@drawable/progressbar"
            android:id="@+id/progressBarHorizontal"
            android:layout_marginTop="10px"
            android:layout_marginBottom="4px"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginLeft="12px"
            android:layout_width="100px"
            android:layout_height="6px"/>

        <TextView
            android:id="@+id/tv_progress_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="15px"
            android:text="4444"
            android:textColor="@color/white"
            android:textSize="16px"

            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
<TextView
    android:id="@+id/tv_hyqy"
    android:layout_width="48px"
    android:layout_height="154px"
    android:layout_marginTop="245px"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:text="@string/membership_interests"
    android:textSize="28px"
    android:textColor="#DCC38D"
    android:background="@drawable/normal_bg_white_vertical"

    />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="30px"
        android:id="@+id/arl_points"
        android:layout_below="@+id/arl_card"
        android:background="@drawable/normal_bg_white60"
        >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11px"
        android:layout_marginRight="11px"
        android:layout_marginTop="7px"
        android:weightSum="2"
        android:layout_marginBottom="7px"
        android:background="@drawable/normal_bg_orange53"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:id="@+id/all_get_points"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_points"
                android:layout_width="48px"
                android:layout_centerVertical="true"
                android:layout_height="48px"
                android:layout_marginRight="13px"
                android:src="@mipmap/member_points_select"
                />

            <TextView
                android:id="@+id/tv_zqjf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Points"
                android:textSize="32px"
                android:layout_toRightOf="@+id/iv_points"
                android:textColor="#AAAAAA"
                android:layout_centerVertical="true"
                />

        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="2px"
            android:layout_gravity="center"
            android:background="#F0F0F0"
            android:layout_height="37px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/all_exchange_points"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_exchange"
                android:layout_width="48px"
                android:layout_centerVertical="true"
                android:layout_height="48px"
                android:layout_marginRight="13px"
                android:src="@mipmap/member_exchage"
                />

            <TextView

                android:id="@+id/tv_dhjf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换积分"
                android:textSize="32px"
                android:layout_toRightOf="@+id/iv_points"
                android:textColor="#AAAAAA"
                android:layout_centerVertical="true"
                />

        </com.zhy.autolayout.AutoLinearLayout>



    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/arl_points"
        >



    </android.support.v7.widget.RecyclerView>
</com.zhy.autolayout.AutoRelativeLayout>