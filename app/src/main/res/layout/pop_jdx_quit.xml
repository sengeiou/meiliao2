<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/normal_bg_white"
    android:layout_width="580px"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    >

<TextView
    android:id="@+id/tv_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="28px"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:text="练习需坚持。退出后计划进度将被清空,确定退出吗"
    android:layout_marginTop="49px"
    android:paddingLeft="67px"
    android:paddingRight="67px"
    android:textColor="@color/login_text_color"
    android:layout_marginBottom="50px"
    />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_hint"
        android:background="#E0E0E0"
        />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="25px"
    android:layout_marginBottom="15px"
    android:layout_below="@+id/view_line"
    >


    <TextView
        android:id="@+id/tv_qd"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="@drawable/normal_bg_gray"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25px"
        android:paddingTop="10px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="24px"
        android:paddingBottom="10px"
        android:text="@string/determine"
        />
    <TextView
        android:id="@+id/tv_qx"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="25px"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:layout_marginRight="35px"
        android:layout_height="wrap_content"
        android:text="@string/soft_update_cancel"
        android:textColor="@color/white"
        android:background="@drawable/normal_bg_red"
        />
</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>