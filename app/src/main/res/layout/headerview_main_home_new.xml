<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="22px"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44px"
        android:textColor="@color/textColor_444"
        android:layout_marginLeft="36px"
        android:text="为你推荐"
        android:layout_marginTop="47px"
        android:layout_marginBottom="40px"
        android:textStyle="bold"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_album"
        android:layout_width="match_parent"
        android:layout_height="281px"
        android:layout_marginLeft="33px"
        android:layout_marginRight="33px"
        android:background="@drawable/normal_bg_gray">
        <ImageView
            android:id="@+id/iv_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/all_exercise"
            android:layout_marginTop="23dp"
            android:text="推荐的专辑"
            android:textColor="@color/textColor_666"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:text="第一节:身体少吃"
            android:textSize="24px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_exercise"
            android:layout_width="wrap_content"
            android:layout_height="68px"
            android:layout_below="@+id/tv_section"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="40px"
            android:layout_marginTop="35px"
            android:background="@drawable/normal_bg_green"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="继续练习"
                android:textColor="@color/white"
                android:textSize="30px" />

            <ImageView
                android:layout_width="15px"
                android:layout_height="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16px"
                android:src="@mipmap/play_with_green" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>



</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>