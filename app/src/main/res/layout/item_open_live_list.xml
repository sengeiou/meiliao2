<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp">

    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv_item_open_live_list_pic"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:roundimageview_height_ratio="0.667"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_loading_square"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_open_live_list_title"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/iv_item_open_live_list_pic"
        android:maxLines="2"
        android:text="第一课：正念如何融入一天的工作与生活"
        android:textColor="@color/textColor_333"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_item_open_live_list_date"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_open_live_list_pic"
        android:layout_toRightOf="@+id/iv_item_open_live_list_pic"
        android:text="7月20日 9:30 "
        android:textColor="@color/textColor_9f"/>

    <View
        style="@style/hor_match_line"
        android:layout_below="@+id/iv_item_open_live_list_pic"
        android:layout_marginTop="12dp"/>

</RelativeLayout>