        <shape>
            <solid android:color="@color/gray"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/gray70"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>