<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 倒三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%">

            <shape android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="10dp" />
                <stroke
                    android:width="1dp"
                    android:color="#33CCCCCC" />

            </shape>
        </rotate>
    </item>
</layer-list>